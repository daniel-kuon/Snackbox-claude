@page "/admin/users/{UserId:int}"
@inject HttpClient Http
@inject IStringLocalizer<SharedResources> L
@inject ILocalizationService Localization
@inject NavigationManager Navigation

<PageTitle>@L["UserDetail.PageTitle"]</PageTitle>

<div class="container-fluid">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">@L["Common.Loading"]</span>
            </div>
            <p>@L["UserDetail.LoadingUser"]</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
        <button class="btn btn-secondary" @onclick="NavigateBack">@L["Common.BackToUsers"]</button>
    }
    else if (user != null)
    {
        <div class="page-header">
            <div>
                <h2>@user.Username</h2>
                <p class="text-muted">@user.Email</p>
            </div>
            <button class="btn btn-secondary" @onclick="NavigateBack">Back to Users</button>
        </div>

        <div class="user-summary">
            <div class="summary-card">
                <div class="summary-label">@L["Common.Balance"]</div>
                <div class="summary-value @(user.Balance < 0 ? "text-danger" : "text-success")">
                    €@user.Balance.ToString("F2")
                </div>
            </div>
            <div class="summary-card">
                <div class="summary-label">@L["Common.Role"]</div>
                <div class="summary-value">
                    <span class="badge badge-@(user.Role.ToLower())">@user.Role</span>
                </div>
            </div>
            <div class="summary-card">
                <div class="summary-label">@L["Common.Status"]</div>
                <div class="summary-value">
                    @if (user.IsActive)
                    {
                        <span class="badge badge-success">@L["Common.Active"]</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">@L["Common.Inactive"]</span>
                    }
                </div>
            </div>
        </div>

        <div class="tabs">
            <button class="tab-button @(activeTab == "info" ? "active" : "")" @onclick='() => activeTab = "info"'>
                @L["UserDetail.Tabs.Info"]
            </button>
            <button class="tab-button @(activeTab == "payments" ? "active" : "")" @onclick='() => activeTab = "payments"'>
                @L["UserDetail.Tabs.Payments"]
            </button>
            <button class="tab-button @(activeTab == "purchases" ? "active" : "")" @onclick='() => activeTab = "purchases"'>
                @L["UserDetail.Tabs.Purchases"]
            </button>
            <button class="tab-button @(activeTab == "barcodes" ? "active" : "")" @onclick='() => activeTab = "barcodes"'>
                @L["UserDetail.Tabs.Barcodes"]
            </button>
        </div>

        <div class="tab-content">
            @if (activeTab == "info")
            {
                <div class="info-section">
                    <div class="info-row">
                        <span class="info-label">@L["UserDetail.Info.Username"]</span>
                        <span class="info-value">@user.Username</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">@L["UserDetail.Info.Email"]</span>
                        <span class="info-value">@user.Email</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">@L["UserDetail.Info.Role"]</span>
                        <span class="info-value">@user.Role</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">@L["UserDetail.Info.Active"]</span>
                        <span class="info-value">@(user.IsActive ? L["Common.Yes"].Value : L["Common.No"].Value)</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">@L["UserDetail.Info.Balance"]</span>
                        <span class="info-value @(user.Balance < 0 ? "text-danger" : "text-success")">€@user.Balance.ToString("F2")</span>
                    </div>
                </div>
            }
            else if (activeTab == "payments")
            {
                <div class="section-header">
                    <h3>@L["Payments.History"]</h3>
                    <button class="btn btn-primary btn-sm" @onclick="ShowAddPayment">+ @L["Payments.Add"]</button>
                </div>

                @if (payments == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>@L["Payments.Loading"]</span>
                    </div>
                }
                else if (payments.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@L["Purchases.Table.Date"]</th>
                                <th>@L["Barcodes.Table.Amount"]</th>
                                <th>@L["Payments.Notes"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in payments.OrderByDescending(p => p.PaidAt))
                            {
                                <tr>
                                    <td>@payment.PaidAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="text-success">€@payment.Amount.ToString("F2")</td>
                                    <td>@payment.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>@L["Payments.Empty"]</p>
                    </div>
                }
            }
            else if (activeTab == "purchases")
            {
                <div class="section-header">
                    <h3>@L["Purchases.History"]</h3>
                </div>

                @if (purchases == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>@L["Purchases.Loading"]</span>
                    </div>
                }
                else if (purchases.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@L["Purchases.Table.Date"]</th>
                                <th>@L["Purchases.Table.Product"]</th>
                                <th>@L["Purchases.Table.Quantity"]</th>
                                <th>@L["Purchases.Table.Price"]</th>
                                <th>@L["Purchases.Table.Total"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var purchase in purchases.OrderByDescending(p => p.PurchasedAt))
                            {
                                <tr>
                                    <td>@purchase.PurchasedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@purchase.ProductName</td>
                                    <td>@purchase.Quantity</td>
                                    <td>€@purchase.PricePerUnit.ToString("F2")</td>
                                    <td class="text-danger">€@purchase.TotalPrice.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>@L["Purchases.Empty"]</p>
                    </div>
                }
            }
            else if (activeTab == "barcodes")
            {
                <div class="section-header">
                    <h3>@L["Barcodes.Title"]</h3>
                    <button class="btn btn-primary btn-sm" @onclick="ShowAddBarcode">+ @L["Barcodes.Add"]</button>
                </div>

                @if (barcodes == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>@L["Barcodes.Loading"]</span>
                    </div>
                }
                else if (barcodes.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@L["Barcodes.Table.Code"]</th>
                                <th>@L["Barcodes.Table.Amount"]</th>
                                <th>@L["Barcodes.Table.Type"]</th>
                                <th>@L["Barcodes.Table.Status"]</th>
                                <th>@L["Barcodes.Table.Created"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var barcode in barcodes)
                            {
                                <tr>
                                    <td><code>@barcode.Code</code></td>
                                    <td>€@barcode.Amount.ToString("F2")</td>
                                    <td>
                                        @if (barcode.IsLoginOnly)
                                        {
                                            <span class="badge badge-info">@L["Barcodes.Type.LoginOnly"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-primary">@L["Barcodes.Type.Payment"]</span>
                                        }
                                    </td>
                                    <td>
                                        @if (barcode.IsActive)
                                        {
                                            <span class="badge badge-success">@L["Common.Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@L["Common.Inactive"]</span>
                                        }
                                    </td>
                                    <td>@barcode.CreatedAt.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>@L["Users.Empty"]</p>
                    </div>
                }
            }
        </div>
    }
</div>

@if (showPaymentModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@L["Payments.Add.Title"]</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (modalError != null)
                {
                    <div class="alert alert-danger">@modalError</div>
                }
                <EditForm Model="@paymentForm" OnValidSubmit="@SavePayment">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>@L["Payments.Amount"]</label>
                        <InputNumber @bind-Value="paymentForm.Amount" class="form-control" step="0.01" />
                        <ValidationMessage For="@(() => paymentForm.Amount)" />
                    </div>

                    <div class="form-group">
                        <label>@L["Payments.Notes"]</label>
                        <InputTextArea @bind-Value="paymentForm.Notes" class="form-control" rows="3" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">@L["Common.Cancel"]</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            @L["Payments.Save"]
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@if (showBarcodeModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@L["Barcodes.Add.Title"]</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (modalError != null)
                {
                    <div class="alert alert-danger">@modalError</div>
                }
                <EditForm Model="@barcodeForm" OnValidSubmit="@SaveBarcode">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>@L["Barcodes.Label.Barcode"]</label>
                        <InputText @bind-Value="barcodeForm.Code" class="form-control" />
                        <ValidationMessage For="@(() => barcodeForm.Code)" />
                    </div>

                    <div class="form-group">
                        <label>@L["Payments.Amount"]</label>
                        <InputNumber @bind-Value="barcodeForm.Amount" class="form-control" step="0.01" />
                        <ValidationMessage For="@(() => barcodeForm.Amount)" />
                    </div>

                    <div class="form-check">
                        <InputCheckbox @bind-Value="barcodeForm.IsLoginOnly" class="form-check-input" id="isLoginOnlyCheck" />
                        <label class="form-check-label" for="isLoginOnlyCheck">
                            @L["Barcodes.Type.LoginOnly"] (no payment)
                        </label>
                    </div>

                    <div class="form-check">
                        <InputCheckbox @bind-Value="barcodeForm.IsActive" class="form-check-input" id="isActiveCheck" />
                        <label class="form-check-label" for="isActiveCheck">
                            @L["Common.Active"]
                        </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">@L["Common.Cancel"]</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            @L["Common.SaveBarcode"]
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

