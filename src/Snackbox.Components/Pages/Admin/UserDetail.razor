@page "/admin/users/{UserId:int}"
@using System.ComponentModel.DataAnnotations
@using Snackbox.Api.Dtos
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>User Details - Snackbox Admin</PageTitle>

<div class="container-fluid">
    @if (_isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading user details...</p>
        </div>
    }
    else if (_errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
        </div>
        <button class="btn btn-secondary" @onclick="NavigateBack">Back to Users</button>
    }
    else if (_user != null)
    {
        <div class="page-header">
            <div>
                <h2>@_user.Username</h2>
                <p class="text-muted">@_user.Email</p>
            </div>
            <button class="btn btn-secondary" @onclick="NavigateBack">Back to Users</button>
        </div>

        <div class="user-summary">
            <div class="summary-card">
                <div class="summary-label">Balance</div>
                <div class="summary-value @(_user.Balance < 0 ? "text-danger" : "text-success")">
                    €@_user.Balance.ToString("F2")
                </div>
            </div>
            <div class="summary-card">
                <div class="summary-label">Role</div>
                <div class="summary-value">
                    <span class="badge">@(_user.IsAdmin ? "Admin" : "User")</span>
                </div>
            </div>
        </div>

        <div class="tabs">
            <button class="tab-button @(_activeTab == "info" ? "active" : "")" @onclick='() => _activeTab = "info"'>
                User Information
            </button>
            <button class="tab-button @(_activeTab == "payments" ? "active" : "")" @onclick='() => _activeTab = "payments"'>
                Payments
            </button>
            <button class="tab-button @(_activeTab == "purchases" ? "active" : "")" @onclick='() => _activeTab = "purchases"'>
                Purchases
            </button>
            <button class="tab-button @(_activeTab == "barcodes" ? "active" : "")" @onclick='() => _activeTab = "barcodes"'>
                Barcodes
            </button>
        </div>

        <div class="tab-content">
            @if (_activeTab == "info")
            {
                <div class="info-section">
                    @if (!isEditingUserInfo)
                    {
                        <div class="section-header">
                            <h3>User Information</h3>
                            <button class="btn btn-primary btn-sm" @onclick="StartEditUserInfo">Edit</button>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Username:</span>
                            <span class="info-value">@_user.Username</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@_user.Email</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Role:</span>
                            <span class="info-value">@(_user.IsAdmin ? "Admin" : "User")</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Balance:</span>
                            <span class="info-value @(_user.Balance < 0 ? "text-danger" : "text-success")">€@_user.Balance.ToString("F2")</span>
                        </div>
                    }
                    else
                    {
                        <div class="section-header">
                            <h3>Edit User Information</h3>
                        </div>
                        @if (editError != null)
                        {
                            <div class="alert alert-danger">@editError</div>
                        }
                        <EditForm Model="@userEditForm" OnValidSubmit="@SaveUserInfo">
                            <DataAnnotationsValidator />

                            <div class="form-group">
                                <label>Username</label>
                                <InputText @bind-Value="userEditForm.Username" class="form-control" />
                                <ValidationMessage For="@(() => userEditForm.Username)" />
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <InputText @bind-Value="userEditForm.Email" class="form-control" type="email" />
                                <ValidationMessage For="@(() => userEditForm.Email)" />
                            </div>

                            <div class="form-group">
                                <label>Role</label>
                                <InputSelect @bind-Value="userEditForm.Role" class="form-control">
                                    <option value="User">User</option>
                                    <option value="Admin">Admin</option>
                                </InputSelect>
                            </div>

                            <div class="info-row">
                                <span class="info-label">Balance:</span>
                                <span class="info-value @(_user.Balance < 0 ? "text-danger" : "text-success")">€@_user.Balance.ToString("F2")</span>
                            </div>

                            <div class="button-group">
                                <button type="button" class="btn btn-secondary" @onclick="CancelEditUserInfo">Cancel</button>
                                <button type="submit" class="btn btn-primary" disabled="@isSavingUserInfo">
                                    @if (isSavingUserInfo)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span>
                                    }
                                    Save
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            }
            else if (_activeTab == "payments")
            {
                <div class="section-header">
                    <h3>Payment History</h3>
                    <button class="btn btn-primary btn-sm" @onclick="ShowAddPayment">+ Add Payment</button>
                </div>

                @if (_payments == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading payments...</span>
                    </div>
                }
                else if (_payments.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in _payments.OrderByDescending(p => p.PaidAt))
                            {
                                <tr>
                                    <td>@payment.PaidAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="text-success">€@payment.Amount.ToString("F2")</td>
                                    <td>@payment.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No payments recorded yet.</p>
                    </div>
                }
            }
            else if (_activeTab == "purchases")
            {
                <div class="section-header">
                    <h3>Purchase History</h3>
                    <div class="button-group">
                        <button class="btn btn-primary btn-sm" @onclick="ShowAddManualPurchase">+ Manual Purchase</button>
                        <button class="btn btn-secondary btn-sm" @onclick="ShowAddCorrection">+ Correction</button>
                    </div>
                </div>

                @if (_purchases == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading purchases...</span>
                    </div>
                }
                else if (_purchases.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Total</th>
                                <th>Reference</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var purchase in _purchases.OrderByDescending(p => p.CompletedAt))
                            {
                                <tr>
                                    <td>@purchase.CompletedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        @if (purchase.Type == "Manual")
                                        {
                                            <span class="badge badge-info">Manual</span>
                                        }
                                        else if (purchase.Type == "Correction")
                                        {
                                            <span class="badge badge-warning">Correction</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Normal</span>
                                        }
                                    </td>
                                    <td class="@(purchase.TotalAmount >= 0 ? "text-danger" : "text-success")">
                                        @(purchase.TotalAmount >= 0 ? "€" : "-€")@Math.Abs(purchase.TotalAmount).ToString("F2")
                                    </td>
                                    <td>
                                        @if (purchase.ReferencePurchaseId.HasValue)
                                        {
                                            <span>Ref: #@purchase.ReferencePurchaseId</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No purchases recorded yet.</p>
                    </div>
                }
            }
            else if (_activeTab == "barcodes")
            {
                <div class="section-header">
                    <h3>Barcodes</h3>
                    <button class="btn btn-primary btn-sm" @onclick="ShowAddBarcode">+ Add Barcode</button>
                </div>

                @if (_barcodes == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading barcodes...</span>
                    </div>
                }
                else if (_barcodes.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Amount</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var barcode in _barcodes)
                            {
                                <tr>
                                    <td><code>@barcode.Code</code></td>
                                    <td>€@barcode.Amount.ToString("F2")</td>
                                    <td>
                                        @if (barcode.IsLoginOnly)
                                        {
                                            <span class="badge badge-info">Login Only</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-primary">Payment</span>
                                        }
                                    </td>
                                    <td>
                                        @if (barcode.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@barcode.CreatedAt.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No barcodes assigned yet.</p>
                    </div>
                }
            }
        </div>
    }
</div>

@if (_showPaymentModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Payment</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (_modalError != null)
                {
                    <div class="alert alert-danger">@_modalError</div>
                }
                <EditForm Model="@_paymentForm" OnValidSubmit="@SavePayment">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Amount (€)</label>
                        <InputNumber @bind-Value="_paymentForm.Amount" class="form-control" step="0.01" />
                        <ValidationMessage For="@(() => _paymentForm.Amount)" />
                    </div>

                    <div class="form-group">
                        <label>Notes (optional)</label>
                        <InputTextArea @bind-Value="_paymentForm.Notes" class="form-control" rows="3" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Save Payment
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@if (_showBarcodeModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Barcode</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (_modalError != null)
                {
                    <div class="alert alert-danger">@_modalError</div>
                }
                <EditForm Model="@_barcodeForm" OnValidSubmit="@SaveBarcode">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Barcode</label>
                        <InputText @bind-Value="_barcodeForm.Code" class="form-control" />
                        <ValidationMessage For="@(() => _barcodeForm.Code)" />
                    </div>

                    <div class="form-group">
                        <label>Amount (€)</label>
                        <InputNumber @bind-Value="_barcodeForm.Amount" class="form-control" step="0.01" />
                        <ValidationMessage For="@(() => _barcodeForm.Amount)" />
                    </div>

                    <div class="form-check">
                        <InputCheckbox @bind-Value="_barcodeForm.IsLoginOnly" class="form-check-input" id="isLoginOnlyCheck" />
                        <label class="form-check-label" for="isLoginOnlyCheck">
                            Login Only (no payment)
                        </label>
                    </div>

                    <div class="form-check">
                        <InputCheckbox @bind-Value="_barcodeForm.IsActive" class="form-check-input" id="isActiveCheck" />
                        <label class="form-check-label" for="isActiveCheck">
                            Active
                        </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Save Barcode
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@if (showManualPurchaseModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Manual Purchase</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (modalError != null)
                {
                    <div class="alert alert-danger">@modalError</div>
                }
                <EditForm Model="@manualPurchaseForm" OnValidSubmit="@SaveManualPurchase">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Amount (€)</label>
                        <InputNumber @bind-Value="manualPurchaseForm.Amount" class="form-control" step="0.01" />
                        <ValidationMessage For="@(() => manualPurchaseForm.Amount)" />
                    </div>

                    <div class="form-group">
                        <label>Date</label>
                        <InputDate @bind-Value="manualPurchaseForm.CreatedAt" class="form-control" Type="InputDateType.DateTimeLocal" />
                        <ValidationMessage For="@(() => manualPurchaseForm.CreatedAt)" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Add Purchase
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@if (showCorrectionModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Purchase Correction</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (modalError != null)
                {
                    <div class="alert alert-danger">@modalError</div>
                }
                <EditForm Model="@correctionForm" OnValidSubmit="@SaveCorrection">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Reference Purchase</label>
                        <InputSelect @bind-Value="correctionForm.ReferencePurchaseId" class="form-control">
                            <option value="">-- Select a purchase --</option>
                            @if (purchases != null)
                            {
                                @foreach (var purchase in purchases.OrderByDescending(p => p.CompletedAt))
                                {
                                    <option value="@purchase.Id">#@purchase.Id - @purchase.CompletedAt?.ToString("yyyy-MM-dd") - €@purchase.TotalAmount.ToString("F2")</option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => correctionForm.ReferencePurchaseId)" />
                    </div>

                    <div class="form-group">
                        <label>Correction Amount (€)</label>
                        <InputNumber @bind-Value="correctionForm.Amount" class="form-control" step="0.01" />
                        <ValidationMessage For="@(() => correctionForm.Amount)" />
                        <small class="form-text text-muted">Use negative values to deduct from balance</small>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Add Correction
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

<style>
