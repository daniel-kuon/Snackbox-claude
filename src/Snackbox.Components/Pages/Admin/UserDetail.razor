@code {
    [Parameter]
    public int UserId { get; set; }

    private UserDto? user;
    private List<PaymentDto>? payments;
    private List<PurchaseDto>? purchases;
    private List<BarcodeDto>? barcodes;
    private bool isLoading = true;
    private string? errorMessage;
    private string activeTab = "info";
    private bool showPaymentModal = false;
    private bool showBarcodeModal = false;
    private PaymentFormModel paymentForm = new();
    private BarcodeFormModel barcodeForm = new();
    private string? modalError;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (activeTab == "payments" && payments == null)
        {
            await LoadPayments();
        }
        else if (activeTab == "purchases" && purchases == null)
        {
            await LoadPurchases();
        }
        else if (activeTab == "barcodes" && barcodes == null)
        {
            await LoadBarcodes();
        }
    }

    private async Task LoadUserData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            user = await Http.GetFromJsonAsync<UserDto>($"api/users/{UserId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load user: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadPayments()
    {
        try
        {
            payments = await Http.GetFromJsonAsync<List<PaymentDto>>($"api/payments/user/{UserId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load payments: {ex.Message}";
        }
    }

    private async Task LoadPurchases()
    {
        try
        {
            purchases = await Http.GetFromJsonAsync<List<PurchaseDto>>($"api/purchases/user/{UserId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load purchases: {ex.Message}";
        }
    }

    private async Task LoadBarcodes()
    {
        try
        {
            barcodes = await Http.GetFromJsonAsync<List<BarcodeDto>>($"api/barcodes/user/{UserId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load barcodes: {ex.Message}";
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/admin/users");
    }

    private void ShowAddPayment()
    {
        paymentForm = new PaymentFormModel();
        modalError = null;
        showPaymentModal = true;
    }

    private void ShowAddBarcode()
    {
        barcodeForm = new BarcodeFormModel { IsActive = true };
        modalError = null;
        showBarcodeModal = true;
    }

    private async Task SavePayment()
    {
        isSaving = true;
        modalError = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/payments", new
            {
                userId = UserId,
                amount = paymentForm.Amount,
                notes = paymentForm.Notes
            });

            if (response.IsSuccessStatusCode)
            {
                CloseModals();
                payments = null;
                await LoadPayments();
                await LoadUserData(); // Refresh balance
            }
            else
            {
                modalError = "Failed to add payment. Please try again.";
            }
        }
        catch (Exception ex)
        {
            modalError = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SaveBarcode()
    {
        isSaving = true;
        modalError = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/barcodes", new
            {
                userId = UserId,
                code = barcodeForm.Code,
                amount = barcodeForm.Amount,
                isActive = barcodeForm.IsActive,
                isLoginOnly = barcodeForm.IsLoginOnly
            });

            if (response.IsSuccessStatusCode)
            {
                CloseModals();
                barcodes = null;
                await LoadBarcodes();
            }
            else
            {
                modalError = "Failed to add barcode. Please try again.";
            }
        }
        catch (Exception ex)
        {
            modalError = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void CloseModals()
    {
        showPaymentModal = false;
        showBarcodeModal = false;
        paymentForm = new();
        barcodeForm = new();
        modalError = null;
    }

    private class UserDto
    {
        public int Id { get; set; }
        public string Username { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public bool IsActive { get; set; }
        public decimal Balance { get; set; }
    }

    private class PaymentDto
    {
        public int Id { get; set; }
        public int UserId { get; set; }
        public decimal Amount { get; set; }
        public DateTime PaidAt { get; set; }
        public string? Notes { get; set; }
    }

    private class PurchaseDto
    {
        public int Id { get; set; }
        public string ProductName { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public decimal PricePerUnit { get; set; }
        public decimal TotalPrice { get; set; }
        public DateTime PurchasedAt { get; set; }
    }

    private class BarcodeDto
    {
        public int Id { get; set; }
        public string Code { get; set; } = string.Empty;
        public decimal Amount { get; set; }
        public bool IsActive { get; set; }
        public bool IsLoginOnly { get; set; }
        public DateTime CreatedAt { get; set; }
    }

    private class PaymentFormModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.Range(0.01, 10000, ErrorMessage = "Amount must be between 0.01 and 10000")]
        public decimal Amount { get; set; }

        public string? Notes { get; set; }
    }

    private class BarcodeFormModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        public string Code { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Range(0, 10000)]
        public decimal Amount { get; set; }

        public bool IsActive { get; set; } = true;
        public bool IsLoginOnly { get; set; }
    }
}
