@page "/admin/users/{UserId:int}"
@using System.ComponentModel.DataAnnotations
@using Snackbox.Api.Dtos
@using Snackbox.Components.Components.Shared
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>User Details - Snackbox Admin</PageTitle>

<div class="container-fluid">
    @if (_isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading user details...</p>
        </div>
    }
    else if (_errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
        </div>
        <button class="btn btn-secondary" @onclick="NavigateBack">Back to Users</button>
    }
    else if (_user != null)
    {
        <div class="page-header">
            <div>
                <h2>@_user.Username</h2>
                <p class="text-muted">@_user.Email</p>
            </div>
            <button class="btn btn-secondary" @onclick="NavigateBack">Back to Users</button>
        </div>

        <div class="user-summary">
            <div class="summary-card">
                <div class="summary-label">Balance</div>
                <div class="summary-value @(_user.Balance < 0 ? "text-danger" : "text-success")">
                    ‚Ç¨@_user.Balance.ToString("F2")
                </div>
            </div>
            <div class="summary-card">
                <div class="summary-label">Role</div>
                <div class="summary-value">
                    <span class="badge">@(_user.IsAdmin ? "Admin" : "User")</span>
                </div>
            </div>
        </div>

        <div class="tabs">
            <button class="tab-button @(_activeTab == "info" ? "active" : "")" @onclick='() => SwitchTab("info")'>
                User Information
            </button>
            <button class="tab-button @(_activeTab == "payments" ? "active" : "")" @onclick='() => SwitchTab("payments")'>
                Payments
            </button>
            <button class="tab-button @(_activeTab == "purchases" ? "active" : "")" @onclick='() => SwitchTab("purchases")'>
                Purchases
            </button>
            <button class="tab-button @(_activeTab == "barcodes" ? "active" : "")" @onclick='() => SwitchTab("barcodes")'>
                Barcodes
            </button>
            <button class="tab-button @(_activeTab == "achievements" ? "active" : "")" @onclick='() => SwitchTab("achievements")'>
                Achievements
            </button>
        </div>

        <div class="tab-content">
            @if (_activeTab == "info")
            {
                <div class="info-section">
                    @if (!_isEditingUserInfo)
                    {
                        <div class="section-header">
                            <h3>User Information</h3>
                            <div class="button-group">
                                @if (_user.Balance < 0 && !string.IsNullOrEmpty(_user.Email))
                                {
                                    <button class="btn btn-warning btn-sm" @onclick="SendPaymentReminder" disabled="@_isSendingEmail">
                                        @if (_isSendingEmail)
                                        {
                                            <span class="spinner-border spinner-border-sm"></span>
                                        }
                                        ‚úâ Send Payment Reminder
                                    </button>
                                }
                                <button class="btn btn-primary btn-sm" @onclick="StartEditUserInfo">Edit</button>
                            </div>
                        </div>
                        @if (_emailSuccess != null)
                        {
                            <div class="alert alert-success">@_emailSuccess</div>
                        }
                        @if (_emailError != null)
                        {
                            <div class="alert alert-danger">@_emailError</div>
                        }
                        <div class="info-row">
                            <span class="info-label">Username:</span>
                            <span class="info-value">@_user.Username</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@_user.Email</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Role:</span>
                            <span class="info-value">@(_user.IsAdmin ? "Admin" : "User")</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Balance:</span>
                            <span class="info-value @(_user.Balance < 0 ? "text-danger" : "text-success")">‚Ç¨@_user.Balance.ToString("F2")</span>
                        </div>

                        <div class="section-divider"></div>
                        <div class="section-header">
                            <h3>Password Management</h3>
                        </div>
                        @if (!string.IsNullOrEmpty(_adminPasswordSuccess))
                        {
                            <div class="alert alert-success">@_adminPasswordSuccess</div>
                        }
                        @if (!string.IsNullOrEmpty(_adminPasswordError))
                        {
                            <div class="alert alert-danger">@_adminPasswordError</div>
                        }
                        <EditForm OnValidSubmit="@AdminSetPasswordAsync">
                            <DataAnnotationsValidator />
                            <div class="form-group">
                                <label>New Password</label>
                                <InputText @bind-Value="_adminNewPassword" class="form-control" type="password" />
                            </div>
                            <div class="button-group">
                                <button type="submit" class="btn btn-primary btn-sm" disabled="@_isSettingPassword">
                                    @if (_isSettingPassword)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span>
                                    }
                                    Set Password
                                </button>
                            </div>
                        </EditForm>
                    }
                    else
                    {
                        <div class="section-header">
                            <h3>Edit User Information</h3>
                        </div>
                        @if (_editError != null)
                        {
                            <div class="alert alert-danger">@_editError</div>
                        }
                        <EditForm Model="@_userEditForm" OnValidSubmit="@SaveUserInfo">
                            <DataAnnotationsValidator />

                            <div class="form-group">
                                <label>Username</label>
                                <InputText @bind-Value="_userEditForm.Username" class="form-control" />
                                <ValidationMessage For="@(() => _userEditForm.Username)" />
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <InputText @bind-Value="_userEditForm.Email" class="form-control" type="email" />
                                <ValidationMessage For="@(() => _userEditForm.Email)" />
                            </div>

                            <div class="form-group">
                                <label>Role</label>
                                <InputSelect @bind-Value="_userEditForm.Role" class="form-control">
                                    <option value="User">User</option>
                                    <option value="Admin">Admin</option>
                                </InputSelect>
                            </div>

                            <div class="info-row">
                                <span class="info-label">Balance:</span>
                                <span class="info-value @(_user.Balance < 0 ? "text-danger" : "text-success")">‚Ç¨@_user.Balance.ToString("F2")</span>
                            </div>

                            <div class="button-group">
                                <button type="button" class="btn btn-secondary" @onclick="CancelEditUserInfo">Cancel</button>
                                <button type="submit" class="btn btn-primary" disabled="@_isSavingUserInfo">
                                    @if (_isSavingUserInfo)
                                    {
                                        <span class="spinner-border spinner-border-sm"></span>
                                    }
                                    Save
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            }
            else if (_activeTab == "payments")
            {
                <div class="section-header">
                    <h3>Payment History</h3>
                    <button class="btn btn-primary btn-sm" @onclick="ShowAddPayment">+ Add Payment</button>
                </div>

                @if (_payments == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading payments...</span>
                    </div>
                }
                else if (_payments.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in _payments.OrderByDescending(p => p.PaidAt))
                            {
                                <tr>
                                    <td>@payment.PaidAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="text-success">‚Ç¨@payment.Amount.ToString("F2")</td>
                                    <td>@payment.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No payments recorded yet.</p>
                    </div>
                }
            }
            else if (_activeTab == "purchases")
            {
                <div class="section-header">
                    <h3>Purchase History</h3>
                    <div class="button-group">
                        <button class="btn btn-primary btn-sm" @onclick="ShowAddManualPurchase">+ Manual Purchase</button>
                        <button class="btn btn-secondary btn-sm" @onclick="ShowAddCorrection">+ Correction</button>
                    </div>
                </div>

                @if (_purchases == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading purchases...</span>
                    </div>
                }
                else if (_purchases.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Total</th>
                                <th>Reference</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var purchase in _purchases.OrderByDescending(p => p.CompletedAt))
                            {
                                <tr>
                                    <td>@purchase.CompletedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        @if (purchase.Type == "Manual")
                                        {
                                            <span class="badge badge-info">Manual</span>
                                        }
                                        else if (purchase.Type == "Correction")
                                        {
                                            <span class="badge badge-warning">Correction</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Normal</span>
                                        }
                                    </td>
                                    <td class="@(purchase.TotalAmount >= 0 ? "text-danger" : "text-success")">
                                        @if (purchase.TotalAmount < 0)
                                        {
                                            <span class="badge bg-success me-1">Credit</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger me-1">Debit</span>
                                        }
                                        ‚Ç¨@Math.Abs(purchase.TotalAmount).ToString("F2")
                                    </td>
                                    <td>
                                        @if (purchase.ReferencePurchaseId.HasValue)
                                        {
                                            <span>Ref: #@purchase.ReferencePurchaseId</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-warning" @onclick="() => ShowCorrectionForPurchase(purchase.Id)">
                                            Create Correction
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No purchases recorded yet.</p>
                    </div>
                }
            }
            else if (_activeTab == "barcodes")
            {
                <div class="section-header">
                    <h3>Barcodes</h3>
                    <button class="btn btn-primary btn-sm" @onclick="ShowAddBarcode">+ Add Barcode</button>
                </div>

                @if (_barcodes == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading barcodes...</span>
                    </div>
                }
                else if (_barcodes.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Amount</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var barcode in _barcodes)
                            {
                                <tr>
                                    <td><code>@barcode.Code</code></td>
                                    <td>‚Ç¨@barcode.Amount.ToString("F2")</td>
                                    <td>
                                        @if (barcode.IsLoginOnly)
                                        {
                                            <span class="badge badge-info">Login Only</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-primary">Payment</span>
                                        }
                                    </td>
                                    <td>
                                        @if (barcode.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@barcode.CreatedAt.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No barcodes assigned yet.</p>
                    </div>
                }
            }
            else if (_activeTab == "achievements")
            {
                <div class="section-header">
                    <h3>Achievements</h3>
                </div>

                @if (_achievements == null)
                {
                    <div class="loading-container">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading achievements...</span>
                    </div>
                }
                else if (_achievements.Any())
                {
                    <div class="achievements-grid">
                        @foreach (var achievement in _achievements.OrderByDescending(a => a.EarnedAt))
                        {
                            <div class="achievement-card">
                                <div class="achievement-icon">
                                    @if (!string.IsNullOrEmpty(achievement.ImageUrl))
                                    {
                                        @((MarkupString)achievement.ImageUrl)
                                    }
                                    else
                                    {
                                        <span class="achievement-emoji">üèÜ</span>
                                    }
                                </div>
                                <div class="achievement-info">
                                    <h4 class="achievement-name">@achievement.Name</h4>
                                    <p class="achievement-description">@achievement.Description</p>
                                    <div class="achievement-meta">
                                        <span class="achievement-category badge">@achievement.Category</span>
                                        <span class="achievement-date">Earned @achievement.EarnedAt.ToString("MMM d, yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <p>No achievements earned yet. Start making purchases to unlock achievements!</p>
                    </div>
                }
            }
        </div>
    }
</div>

@if (_showPaymentModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Payment</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (_modalError != null)
                {
                    <div class="alert alert-danger">@_modalError</div>
                }
                <EditForm Model="@_paymentForm" OnValidSubmit="@SavePayment">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Amount (‚Ç¨)</label>
                        <InputNumber @bind-Value="_paymentForm.Amount" class="form-control" step="0.01" />
                        <ValidationMessage For="@(() => _paymentForm.Amount)" />
                    </div>

                    <div class="form-group">
                        <label>Payment Type</label>
                        <div class="form-check">
                            <input type="radio" name="paymentType" value="CashRegister" checked="@(_paymentForm.Type == "CashRegister")" @onchange='() => _paymentForm.Type = "CashRegister"' class="form-check-input" id="paymentTypeCash" />
                            <label class="form-check-label" for="paymentTypeCash">
                                Cash Register
                            </label>
                        </div>
                        <div class="form-check">
                            <input type="radio" name="paymentType" value="PayPal" checked="@(_paymentForm.Type == "PayPal")" @onchange='() => _paymentForm.Type = "PayPal"' class="form-check-input" id="paymentTypePayPal" />
                            <label class="form-check-label" for="paymentTypePayPal">
                                PayPal to Admin
                            </label>
                        </div>
                    </div>

                    @if (_paymentForm.Type == "PayPal")
                    {
                        <div class="form-group">
                            <label>Admin User</label>
                            <InputSelect @bind-Value="_paymentForm.AdminUserId" class="form-control">
                                <option value="">-- Select Admin --</option>
                                @if (_adminUsers != null)
                                {
                                    @foreach (var admin in _adminUsers)
                                    {
                                        <option value="@admin.Id">@admin.Username</option>
                                    }
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _paymentForm.AdminUserId)" />
                        </div>
                    }

                    <div class="form-group">
                        <label>Notes (optional)</label>
                        <InputTextArea @bind-Value="_paymentForm.Notes" class="form-control" rows="3" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Save Payment
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@if (_showBarcodeModal)
{
    <div class="modal-backdrop" @onclick="CloseModals"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Barcode</h3>
                <button class="btn-close" @onclick="CloseModals">&times;</button>
            </div>
            <div class="modal-body">
                @if (_modalError != null)
                {
                    <div class="alert alert-danger">@_modalError</div>
                }
                <EditForm Model="@_barcodeForm" OnValidSubmit="@SaveBarcode">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Barcode</label>
                        <BarcodeInput @bind-Value="_barcodeForm.Code" />
                        <ValidationMessage For="@(() => _barcodeForm.Code)" />
                    </div>

                    <div class="form-group">
                        <label>Barcode Type</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" id="typeLogin" name="barcodeType"
                                   checked="@(_barcodeForm.BarcodeType == "Login")"
                                   @onchange="@(() => _barcodeForm.BarcodeType = "Login")" />
                            <label class="form-check-label" for="typeLogin">
                                üîê Login Only (Authentication)
                            </label>
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" id="typePayment" name="barcodeType"
                                   checked="@(_barcodeForm.BarcodeType == "Payment")"
                                   @onchange="@(() => _barcodeForm.BarcodeType = "Payment")" />
                            <label class="form-check-label" for="typePayment">
                                üí≥ Payment Barcode (Purchases)
                            </label>
                        </div>
                    </div>

                    @if (_barcodeForm.BarcodeType == "Payment")
                    {
                        <div class="form-group">
                            <label>Amount (‚Ç¨)</label>
                            <InputNumber @bind-Value="_barcodeForm.Amount" class="form-control" step="0.01" />
                            <ValidationMessage For="@(() => _barcodeForm.Amount)" />
                            <small class="form-text text-muted">Default amount charged when this barcode is scanned</small>
                        </div>
                    }

                    <div class="form-check">
                        <InputCheckbox @bind-Value="_barcodeForm.IsActive" class="form-check-input" id="isActiveCheck" />
                        <label class="form-check-label" for="isActiveCheck">
                            Active
                        </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModals">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Save Barcode
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

