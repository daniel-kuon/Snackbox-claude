@code {
    [Parameter]
    public int UserId { get; set; }

    private UserDto? _user;
    private List<PaymentDto>? _payments;
    private List<PurchaseDto>? _purchases;
    private List<BarcodeDto>? _barcodes;
    private bool _isLoading = true;
    private string? _errorMessage;
    private string _activeTab = "info";
    private bool _showPaymentModal;
    private bool _showBarcodeModal;
    private bool showManualPurchaseModal = false;
    private bool showCorrectionModal = false;
    private bool isEditingUserInfo = false;
    private bool isSavingUserInfo = false;
    private string? editError = null;
    private PaymentFormModel _paymentForm = new();
    private BarcodeFormModel _barcodeForm = new();
    private ManualPurchaseFormModel manualPurchaseForm = new();
    private CorrectionFormModel correctionForm = new();
    private UserEditFormModel userEditForm = new();
    private string? _modalError;
    private bool _isSaving;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (_activeTab == "payments" && _payments == null)
        {
            await LoadPayments();
        }
        else if (_activeTab == "purchases" && _purchases == null)
        {
            await LoadPurchases();
        }
        else if (_activeTab == "barcodes" && _barcodes == null)
        {
            await LoadBarcodes();
        }
    }

    private async Task LoadUserData()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            _user = await Http.GetFromJsonAsync<UserDto>($"api/users/{UserId}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load user: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadPayments()
    {
        try
        {
            _payments = await Http.GetFromJsonAsync<List<PaymentDto>>($"api/payments/user/{UserId}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load payments: {ex.Message}";
        }
    }

    private async Task LoadPurchases()
    {
        try
        {
            _purchases = await Http.GetFromJsonAsync<List<PurchaseDto>>($"api/purchases/user/{UserId}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load purchases: {ex.Message}";
        }
    }

    private async Task LoadBarcodes()
    {
        try
        {
            _barcodes = await Http.GetFromJsonAsync<List<BarcodeDto>>($"api/barcodes/user/{UserId}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load barcodes: {ex.Message}";
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/admin/users");
    }

    private void ShowAddPayment()
    {
        _paymentForm = new PaymentFormModel();
        _modalError = null;
        _showPaymentModal = true;
    }

    private void ShowAddBarcode()
    {
        _barcodeForm = new BarcodeFormModel { IsActive = true };
        _modalError = null;
        _showBarcodeModal = true;
    }

    private async Task SavePayment()
    {
        _isSaving = true;
        _modalError = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/payments", new
            {
                userId = UserId,
                amount = _paymentForm.Amount,
                notes = _paymentForm.Notes
            });

            if (response.IsSuccessStatusCode)
            {
                CloseModals();
                _payments = null;
                await LoadPayments();
                await LoadUserData(); // Refresh balance
            }
            else
            {
                _modalError = "Failed to add payment. Please try again.";
            }
        }
        catch (Exception ex)
        {
            _modalError = $"Error: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task SaveBarcode()
    {
        _isSaving = true;
        _modalError = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/barcodes", new
            {
                userId = UserId,
                code = _barcodeForm.Code,
                amount = _barcodeForm.Amount,
                isActive = _barcodeForm.IsActive,
                isLoginOnly = _barcodeForm.IsLoginOnly
            });

            if (response.IsSuccessStatusCode)
            {
                CloseModals();
                _barcodes = null;
                await LoadBarcodes();
            }
            else
            {
                _modalError = "Failed to add barcode. Please try again.";
            }
        }
        catch (Exception ex)
        {
            _modalError = $"Error: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void CloseModals()
    {
        showPaymentModal = false;
        showBarcodeModal = false;
        showManualPurchaseModal = false;
        showCorrectionModal = false;
        paymentForm = new();
        barcodeForm = new();
        manualPurchaseForm = new();
        correctionForm = new();
        modalError = null;
    }

    private void ShowAddManualPurchase()
    {
        manualPurchaseForm = new ManualPurchaseFormModel
        {
            CreatedAt = DateTime.UtcNow
        };
        modalError = null;
        showManualPurchaseModal = true;
    }

    private void ShowAddCorrection()
    {
        correctionForm = new CorrectionFormModel();
        modalError = null;
        showCorrectionModal = true;
    }

    private async Task SaveManualPurchase()
    {
        isSaving = true;
        modalError = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/purchases/manual", new
            {
                userId = UserId,
                amount = manualPurchaseForm.Amount,
                createdAt = manualPurchaseForm.CreatedAt
            });

            if (response.IsSuccessStatusCode)
            {
                CloseModals();
                purchases = null;
                await LoadPurchases();
                await LoadUserData(); // Refresh balance
            }
            else
            {
                modalError = "Failed to add manual purchase. Please try again.";
            }
        }
        catch (Exception ex)
        {
            modalError = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SaveCorrection()
    {
        isSaving = true;
        modalError = null;

        try
        {
            if (correctionForm.ReferencePurchaseId == 0)
            {
                modalError = "Please select a reference purchase.";
                isSaving = false;
                return;
            }

            var response = await Http.PostAsJsonAsync("api/purchases/correction", new
            {
                userId = UserId,
                referencePurchaseId = correctionForm.ReferencePurchaseId,
                amount = correctionForm.Amount
            });

            if (response.IsSuccessStatusCode)
            {
                CloseModals();
                purchases = null;
                await LoadPurchases();
                await LoadUserData(); // Refresh balance
            }
            else
            {
                modalError = "Failed to add correction. Please try again.";
            }
        }
        catch (Exception ex)
        {
            modalError = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void StartEditUserInfo()
    {
        if (user == null) return;

        userEditForm = new UserEditFormModel
        {
            Username = user.Username,
            Email = user.Email ?? string.Empty,
            Role = user.IsAdmin ? "Admin" : "User"
        };
        editError = null;
        isEditingUserInfo = true;
    }

    private void CancelEditUserInfo()
    {
        isEditingUserInfo = false;
        userEditForm = new();
        editError = null;
    }

    private async Task SaveUserInfo()
    {
        if (user == null) return;

        isSavingUserInfo = true;
        editError = null;

        try
        {
            var response = await Http.PutAsJsonAsync($"api/users/{UserId}", new
            {
                username = userEditForm.Username,
                email = userEditForm.Email,
                isAdmin = userEditForm.Role == "Admin"
            });

            if (response.IsSuccessStatusCode)
            {
                await LoadUserData();
                isEditingUserInfo = false;
            }
            else
            {
                editError = "Failed to update user information. Please try again.";
            }
        }
        catch (Exception ex)
        {
            editError = $"Error: {ex.Message}";
        }
        finally
        {
            isSavingUserInfo = false;
        }
    }

