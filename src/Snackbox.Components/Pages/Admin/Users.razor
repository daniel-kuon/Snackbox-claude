@code {
    private List<UserDto>? users;
    private bool isLoading = true;
    private string? errorMessage;
    private bool showCreateEditModal = false;
    private int? editingUserId = null;
    private UserFormModel userForm = new();
    private string? modalError;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            users = await Http.GetFromJsonAsync<List<UserDto>>("api/users");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load users: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToUserDetail(int userId)
    {
        Navigation.NavigateTo($"/admin/users/{userId}");
    }

    private void ShowCreateUser()
    {
        editingUserId = null;
        userForm = new UserFormModel { IsActive = true, Role = "User" };
        modalError = null;
        showCreateEditModal = true;
    }

    private async Task ShowEditUser(int userId)
    {
        editingUserId = userId;
        modalError = null;

        try
        {
            var user = await Http.GetFromJsonAsync<UserDto>($"api/users/{userId}");
            if (user != null)
            {
                userForm = new UserFormModel
                {
                    Username = user.Username,
                    Email = user.Email,
                    Role = user.Role,
                    IsActive = user.IsActive
                };
                showCreateEditModal = true;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load user: {ex.Message}";
        }
    }

    private async Task SaveUser()
    {
        isSaving = true;
        modalError = null;

        try
        {
            if (editingUserId == null)
            {
                // Create new user
                var response = await Http.PostAsJsonAsync("api/users", new
                {
                    username = userForm.Username,
                    email = userForm.Email,
                    role = userForm.Role,
                    isActive = userForm.IsActive
                });

                if (response.IsSuccessStatusCode)
                {
                    CloseModal();
                    await LoadUsers();
                }
                else
                {
                    modalError = "Failed to create user. Please try again.";
                }
            }
            else
            {
                // Update existing user
                var response = await Http.PutAsJsonAsync($"api/users/{editingUserId}", new
                {
                    username = userForm.Username,
                    email = userForm.Email,
                    role = userForm.Role,
                    isActive = userForm.IsActive
                });

                if (response.IsSuccessStatusCode)
                {
                    CloseModal();
                    await LoadUsers();
                }
                else
                {
                    modalError = "Failed to update user. Please try again.";
                }
            }
        }
        catch (Exception ex)
        {
            modalError = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void CloseModal()
    {
        showCreateEditModal = false;
        editingUserId = null;
        userForm = new();
        modalError = null;
    }

    private class UserFormModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.EmailAddress]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required]
        public string Role { get; set; } = "User";

        public bool IsActive { get; set; } = true;
    }

    private class UserDto
    {
        public int Id { get; set; }
        public string Username { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public bool IsActive { get; set; }
        public decimal Balance { get; set; }
    }
}
