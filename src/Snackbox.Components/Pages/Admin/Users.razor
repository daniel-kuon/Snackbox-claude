@code {
    private List<UserDto>? _users;
    private bool _isLoading = true;
    private string? _errorMessage;
    private string? _emailSuccess;
    private bool _showCreateEditModal;
    private int? _editingUserId;
    private UserFormModel _userForm = new();
    private string? _modalError;
    private bool _isSaving;
    private bool _isSendingEmails;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            _users = await Http.GetFromJsonAsync<List<UserDto>>("api/users");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load users: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task SendBulkPaymentReminders()
    {
        _isSendingEmails = true;
        _errorMessage = null;
        _emailSuccess = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/email/send-bulk-payment-reminders", new { minimumBalance = 10.0m });

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<BulkEmailResult>();
                _emailSuccess = $"Payment reminders sent to {result?.Count ?? 0} user(s) with balance >= €10";
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                _errorMessage = $"Failed to send reminders: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error sending reminders: {ex.Message}";
        }
        finally
        {
            _isSendingEmails = false;
        }
    }

    private void NavigateToUserDetail(int userId)
    {
        Navigation.NavigateTo($"/admin/users/{userId}");
    }

    private void ShowCreateUser()
    {
        _editingUserId = null;
        _userForm = new UserFormModel { IsActive = true, Role = "User" };
        _modalError = null;
        _showCreateEditModal = true;
    }

    private async Task SaveUser()
    {
        _isSaving = true;
        _modalError = null;

        try
        {
            if (_editingUserId == null)
            {
                // Create new user
                var response = await Http.PostAsJsonAsync("api/users", new
                {
                    username = _userForm.Username,
                    email = _userForm.Email,
                    role = _userForm.Role,
                    isActive = _userForm.IsActive
                });

                if (response.IsSuccessStatusCode)
                {
                    CloseModal();
                    await LoadUsers();
                }
                else
                {
                    _modalError = "Failed to create user. Please try again.";
                }
            }
            else
            {
                // Update existing user
                var response = await Http.PutAsJsonAsync($"api/users/{_editingUserId}", new
                {
                    username = _userForm.Username,
                    email = _userForm.Email,
                    role = _userForm.Role,
                    isActive = _userForm.IsActive
                });

                if (response.IsSuccessStatusCode)
                {
                    CloseModal();
                    await LoadUsers();
                }
                else
                {
                    _modalError = "Failed to update user. Please try again.";
                }
            }
        }
        catch (Exception ex)
        {
            _modalError = $"Error: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void CloseModal()
    {
        _showCreateEditModal = false;
        _editingUserId = null;
        _userForm = new();
        _modalError = null;
    }

    private class UserFormModel
    {
        [Required]
        public string Username { get; set; } = string.Empty;

        [EmailAddress]
        public string? Email { get; set; }

        [Required]
        public string Role { get; set; } = "User";

        public bool IsActive { get; set; } = true;
    }

    private class BulkEmailResult
    {
        public int Count { get; set; }
        public string? Message { get; set; }
    }
}
