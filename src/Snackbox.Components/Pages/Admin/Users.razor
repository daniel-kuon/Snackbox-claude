@page "/admin/users"
@using Snackbox.Components.Services
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>User Management - Snackbox Admin</PageTitle>

<div class="container-fluid">
    <div class="page-header">
        <h2>User Management</h2>
        <button class="btn btn-primary" @onclick="ShowCreateUser">
            <span class="icon">+</span> Add User
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading users...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else if (users != null && users.Any())
    {
        <div class="table-container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Balance</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr @onclick="() => NavigateToUserDetail(user.Id)" style="cursor: pointer;">
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge badge-@(user.Role.ToLower())">@user.Role</span>
                            </td>
                            <td class="@(user.Balance < 0 ? "text-danger" : "text-success")">
                                â‚¬@user.Balance.ToString("F2")
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick:stopPropagation="true" @onclick="() => NavigateToUserDetail(user.Id)">
                                    View Details
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick:stopPropagation="true" @onclick="() => ShowEditUser(user.Id)">
                                    Edit
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>No users found.</p>
            <button class="btn btn-primary" @onclick="ShowCreateUser">Add Your First User</button>
        </div>
    }
</div>

@if (showCreateEditModal)
{
    <div class="modal-backdrop" @onclick="CloseModal"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@(editingUserId == null ? "Create User" : "Edit User")</h3>
                <button class="btn-close" @onclick="CloseModal">&times;</button>
            </div>
            <div class="modal-body">
                @if (modalError != null)
                {
                    <div class="alert alert-danger">@modalError</div>
                }
                <EditForm Model="@userForm" OnValidSubmit="@SaveUser">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Username</label>
                        <InputText @bind-Value="userForm.Username" class="form-control" />
                        <ValidationMessage For="@(() => userForm.Username)" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <InputText @bind-Value="userForm.Email" class="form-control" type="email" />
                        <ValidationMessage For="@(() => userForm.Email)" />
                    </div>

                    <div class="form-group">
                        <label>Role</label>
                        <InputSelect @bind-Value="userForm.Role" class="form-control">
                            <option value="User">User</option>
                            <option value="Admin">Admin</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => userForm.Role)" />
                    </div>

                    <div class="form-check">
                        <InputCheckbox @bind-Value="userForm.IsActive" class="form-check-input" id="isActiveCheck" />
                        <label class="form-check-label" for="isActiveCheck">
                            Active
                        </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Save
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

