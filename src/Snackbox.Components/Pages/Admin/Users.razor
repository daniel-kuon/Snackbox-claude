@code {
    private List<UserDto>? _users;
    private bool _isLoading = true;
    private string? _errorMessage;
    private bool _showCreateEditModal;
    private int? _editingUserId;
    private UserFormModel _userForm = new();
    private string? _modalError;
    private bool _isSaving;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var result = await UsersApi.GetAllAsync();
            users = result.ToList();
        }
        catch (ApiException ex)
        {
            errorMessage = $"Failed to load users: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load users: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void NavigateToUserDetail(int userId)
    {
        Navigation.NavigateTo($"/admin/users/{userId}");
    }

    private void ShowCreateUser()
    {
        _editingUserId = null;
        _userForm = new UserFormModel { IsActive = true, Role = "User" };
        _modalError = null;
        _showCreateEditModal = true;
    }

    private async Task ShowEditUser(int userId)
    {
        _editingUserId = userId;
        _modalError = null;

        try
        {
            var user = await UsersApi.GetByIdAsync(userId);
            _userForm = new UserFormModel
            {
                Username = user.Username,
                Email = user.Email,
            };
            _showCreateEditModal = true;
        }
        catch (ApiException ex)
        {
            errorMessage = $"Failed to load user: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load user: {ex.Message}";
        }
    }

    private async Task SaveUser()
    {
        _isSaving = true;
        _modalError = null;

        try
        {
            if (_editingUserId == null)
            {
                // Create new user
                var createDto = new CreateUserDto
                {
                    Username = userForm.Username,
                    Email = userForm.Email,
                    IsAdmin = userForm.Role == "Admin"
                };
                await UsersApi.CreateAsync(createDto);
                CloseModal();
                await LoadUsers();
            }
            else
            {
                // Update existing user
                var updateDto = new UpdateUserDto
                {
                    Username = userForm.Username,
                    Email = userForm.Email,
                    IsAdmin = userForm.Role == "Admin"
                };
                await UsersApi.UpdateAsync(editingUserId.Value, updateDto);
                CloseModal();
                await LoadUsers();
            }
        }
        catch (ApiException ex)
        {
            modalError = ex.Content ?? "Failed to save user. Please try again.";
        }
        catch (Exception ex)
        {
            _modalError = $"Error: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void CloseModal()
    {
        _showCreateEditModal = false;
        _editingUserId = null;
        _userForm = new();
        _modalError = null;
    }

    private class UserFormModel
    {
        [Required]
        public string Username { get; set; } = string.Empty;

        [EmailAddress]
        public string? Email { get; set; }

        [Required]
        public string Role { get; set; } = "User";

        public bool IsActive { get; set; } = true;
    }
}
