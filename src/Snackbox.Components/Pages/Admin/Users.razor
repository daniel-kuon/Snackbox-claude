@code {
    private List<UserDto>? _users;
    private bool _isLoading = true;
    private string? _errorMessage;
    private string? _emailSuccess;
    private bool _showCreateEditModal;
    private bool _showBulkEmailModal;
    private int? _editingUserId;
    private UserFormModel _userForm = new();
    private string? _modalError;
    private bool _isSaving;
    private bool _isSendingEmails;
    private HashSet<int> _selectedUserIds = new();
    private string _userFilter = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var result = await UsersApi.GetAllAsync();
            _users = result.ToList();
        }
        catch (ApiException ex)
        {
            _errorMessage = $"Failed to load users: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load users: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ShowBulkEmailModal()
    {
        _showBulkEmailModal = true;
        _modalError = null;
        _userFilter = string.Empty;
        _selectedUserIds.Clear();

        // Pre-select all users with balance >= 10
        if (_users != null)
        {
            foreach (var user in _users.Where(u => u.Balance < -10 && !string.IsNullOrEmpty(u.Email)))
            {
                _selectedUserIds.Add(user.Id);
            }
        }
    }

    private void CloseBulkEmailModal()
    {
        _showBulkEmailModal = false;
        _selectedUserIds.Clear();
        _userFilter = string.Empty;
    }

    private List<UserDto> GetFilteredUsersForEmail()
    {
        if (_users == null) return new List<UserDto>();

        var eligible = _users.Where(u => u.Balance < -10 && !string.IsNullOrEmpty(u.Email));

        if (string.IsNullOrWhiteSpace(_userFilter))
            return eligible.ToList();

        return eligible.Where(u => u.Username.Contains(_userFilter, StringComparison.OrdinalIgnoreCase)).ToList();
    }

    private void ToggleUserSelection(int userId, bool isSelected)
    {
        if (isSelected)
            _selectedUserIds.Add(userId);
        else
            _selectedUserIds.Remove(userId);
    }

    private void SelectAllUsers()
    {
        foreach (var user in GetFilteredUsersForEmail())
        {
            _selectedUserIds.Add(user.Id);
        }
    }

    private void DeselectAllUsers()
    {
        _selectedUserIds.Clear();
    }

    private async Task SendBulkPaymentReminders()
    {
        if (_selectedUserIds.Count == 0) return;

        _isSendingEmails = true;
        _errorMessage = null;
        _emailSuccess = null;

        try
        {
            // Send individual reminders to selected users
            int successCount = 0;
            foreach (var userId in _selectedUserIds)
            {
                try
                {
                    var response = await Http.PostAsync($"api/email/send-payment-reminder/{userId}", null);
                    if (response.IsSuccessStatusCode)
                        successCount++;
                }
                catch
                {
                    // Continue with other users even if one fails
                }
            }

            _emailSuccess = $"Payment reminders sent to {successCount} user(s)";
            _showBulkEmailModal = false;
            _selectedUserIds.Clear();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error sending reminders: {ex.Message}";
        }
        finally
        {
            _isSendingEmails = false;
        }
    }

    private void NavigateToUserDetail(int userId)
    {
        Navigation.NavigateTo($"/admin/users/{userId}");
    }

    private void ShowCreateUser()
    {
        _editingUserId = null;
        _userForm = new UserFormModel { IsActive = true, Role = "User" };
        _modalError = null;
        _showCreateEditModal = true;
    }

    private async Task SaveUser()
    {
        _isSaving = true;
        _modalError = null;

        try
        {
            if (_editingUserId == null)
            {
                // Create new user
                var createDto = new CreateUserDto
                {
                    Username = _userForm.Username,
                    Email = _userForm.Email,
                    IsAdmin = _userForm.Role == "Admin"
                };
                await UsersApi.CreateAsync(createDto);
                CloseModal();
                await LoadUsers();
            }
            else
            {
                // Update existing user
                var updateDto = new UpdateUserDto
                {
                    Username = _userForm.Username,
                    Email = _userForm.Email,
                    IsAdmin = _userForm.Role == "Admin"
                };
                await UsersApi.UpdateAsync(_editingUserId.Value, updateDto);
                CloseModal();
                await LoadUsers();
            }
        }
        catch (ApiException ex)
        {
            _modalError = ex.Content ?? "Failed to save user. Please try again.";
        }
        catch (Exception ex)
        {
            _modalError = $"Error: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void CloseModal()
    {
        _showCreateEditModal = false;
        _editingUserId = null;
        _userForm = new();
        _modalError = null;
    }

    private class UserFormModel
    {
        [Required]
        public string Username { get; set; } = string.Empty;

        [EmailAddress]
        public string? Email { get; set; }

        [Required]
        public string Role { get; set; } = "User";

        public bool IsActive { get; set; } = true;
    }

    private class BulkEmailResult
    {
        public int Count { get; set; }
        public string? Message { get; set; }
    }
}
