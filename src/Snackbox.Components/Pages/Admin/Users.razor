@page "/admin/users"
@using System.ComponentModel.DataAnnotations
@using Snackbox.ApiClient
@using Snackbox.Api.Dtos
@using Refit
@inject IUsersApi UsersApi
@inject NavigationManager Navigation
@inject HttpClient Http

<PageTitle>User Management - Snackbox Admin</PageTitle>

<div class="container-fluid">
    <div class="page-header">
        <h2>User Management</h2>
        <div class="button-group">
            <button class="btn btn-warning" @onclick="ShowBulkEmailModal" disabled="@_isSendingEmails">
                @if (_isSendingEmails)
                {
                    <span class="spinner-border spinner-border-sm"></span>
                }
                <span class="icon">✉</span> Send Payment Reminders (>€10)
            </button>
            <button class="btn btn-primary" @onclick="ShowCreateUser">
                <span class="icon">+</span> Add User
            </button>
        </div>
    </div>

    @if (_emailSuccess != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @_emailSuccess
            <button type="button" class="btn-close" @onclick='() => _emailSuccess = null'></button>
        </div>
    }

    @if (_isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading users...</p>
        </div>
    }
    else if (_errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @_errorMessage
        </div>
    }
    else if (_users != null && _users.Any())
    {
        <div class="table-container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in _users)
                    {
                        <tr @onclick="() => NavigateToUserDetail(user.Id)" style="cursor: pointer;">
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td class="@(user.Balance < 0 ? "text-danger" : "text-success")">
                                €@user.Balance.ToString("F2")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>No users found.</p>
            <button class="btn btn-primary" @onclick="ShowCreateUser">Add Your First User</button>
        </div>
    }
</div>

@if (_showCreateEditModal)
{
    <div class="modal-backdrop" @onclick="CloseModal"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@(_editingUserId == null ? "Create User" : "Edit User")</h3>
                <button class="btn-close" @onclick="CloseModal">&times;</button>
            </div>
            <div class="modal-body">
                @if (_modalError != null)
                {
                    <div class="alert alert-danger">@_modalError</div>
                }
                <EditForm Model="@_userForm" OnValidSubmit="@SaveUser">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Username</label>
                        <InputText @bind-Value="_userForm.Username" class="form-control" />
                        <ValidationMessage For="@(() => _userForm.Username)" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <InputText @bind-Value="_userForm.Email" class="form-control" type="email" />
                        <ValidationMessage For="@(() => _userForm.Email)" />
                    </div>

                    <div class="form-group">
                        <label>Role</label>
                        <InputSelect @bind-Value="_userForm.Role" class="form-control">
                            <option value="User">User</option>
                            <option value="Admin">Admin</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => _userForm.Role)" />
                    </div>

                    <div class="form-check">
                        <InputCheckbox @bind-Value="_userForm.IsActive" class="form-check-input" id="isActiveCheck" />
                        <label class="form-check-label" for="isActiveCheck">
                            Active
                        </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            Save
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@if (_showBulkEmailModal)
{
    <div class="modal-backdrop" @onclick="CloseBulkEmailModal"></div>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Send Payment Reminders</h3>
                <button class="btn-close" @onclick="CloseBulkEmailModal">&times;</button>
            </div>
            <div class="modal-body">
                @if (_modalError != null)
                {
                    <div class="alert alert-danger">@_modalError</div>
                }

                <div class="form-group">
                    <label>Filter users</label>
                    <input type="text" @bind="_userFilter" @bind:event="oninput" class="form-control" placeholder="Search by name..." />
                </div>

                <div class="mb-3">
                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="SelectAllUsers">Select All</button>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="DeselectAllUsers">Deselect All</button>
                    <span class="ms-3 text-muted">@_selectedUserIds.Count selected</span>
                </div>

                <div class="user-selection-list">
                    @foreach (var user in GetFilteredUsersForEmail())
                    {
                        <div class="user-selection-item">
                            <input type="checkbox"
                                   id="user-@user.Id"
                                   checked="@_selectedUserIds.Contains(user.Id)"
                                   @onchange="@(e => ToggleUserSelection(user.Id, (bool)e.Value!))" />
                            <label for="user-@user.Id">
                                <span class="user-name">@user.Username</span>
                                <span class="user-balance text-danger">€@Math.Abs(user.Balance).ToString("F2")</span>
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CloseBulkEmailModal">Cancel</button>
                <button type="button" class="btn btn-warning" @onclick="SendBulkPaymentReminders" disabled="@(_isSendingEmails || _selectedUserIds.Count == 0)">
                    @if (_isSendingEmails)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    Send to @_selectedUserIds.Count user(s)
                </button>
            </div>
        </div>
    </div>
}

