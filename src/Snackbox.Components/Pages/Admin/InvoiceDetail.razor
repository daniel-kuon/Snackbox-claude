</style>

@code {
    [Parameter]
    public int InvoiceId { get; set; }

    private InvoiceDto? _invoice;
    private bool _isLoading = true;
    private string? _errorMessage;
    private HashSet<int> _selectedItems = new();
    private bool _selectAll = true;
    private bool _showAddToStockModal = false;
    private bool _addToShelf = false;
    private bool _isAddingToStock = false;
    private string? _addToStockError;
    private string? _addToStockSuccess;

    protected override async Task OnInitializedAsync()
    {
        await LoadInvoice();
    }

    private async Task LoadInvoice()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            _invoice = await Http.GetFromJsonAsync<InvoiceDto>($"api/invoices/{InvoiceId}");
            if (_invoice != null)
            {
                // Select all items by default
                _selectedItems = _invoice.Items.Select(i => i.Id).ToHashSet();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load invoice: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ToggleSelectAll(ChangeEventArgs e)
    {
        _selectAll = (bool)e.Value!;
        if (_invoice != null)
        {
            if (_selectAll)
            {
                _selectedItems = _invoice.Items.Select(i => i.Id).ToHashSet();
            }
            else
            {
                _selectedItems.Clear();
            }
        }
    }

    private void ToggleItem(int itemId)
    {
        if (_selectedItems.Contains(itemId))
        {
            _selectedItems.Remove(itemId);
        }
        else
        {
            _selectedItems.Add(itemId);
        }
        
        _selectAll = _invoice != null && _selectedItems.Count == _invoice.Items.Count;
    }

    private void AddItemsToStock()
    {
        if (!_selectedItems.Any())
        {
            _errorMessage = "Please select at least one item";
            return;
        }

        _showAddToStockModal = true;
        _addToStockError = null;
        _addToStockSuccess = null;
    }

    private void CloseAddToStockModal()
    {
        _showAddToStockModal = false;
    }

    private async Task ConfirmAddToStock()
    {
        _isAddingToStock = true;
        _addToStockError = null;
        _addToStockSuccess = null;

        // For now, this is a placeholder - we'll need to implement the matching logic
        // In a full implementation, we'd show a UI to map each item to a product
        
        _addToStockError = "Item-to-stock mapping not yet fully implemented. Use the Stock Management page to manually add items.";
        _isAddingToStock = false;

        // TODO: Implement the actual stock addition logic
        // This would involve calling the endpoint for each selected item
    }

    private async Task DeleteInvoice()
    {
        if (!confirm("Are you sure you want to delete this invoice?"))
            return;

        try
        {
            await Http.DeleteAsync($"api/invoices/{InvoiceId}");
            GoBack();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to delete invoice: {ex.Message}";
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/admin/invoices");
    }

    private bool confirm(string message)
    {
        // In a real app, use a proper confirmation dialog
        return true;
    }
}
