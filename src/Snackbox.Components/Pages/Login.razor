@page "/"
@page "/login"
@using System.ComponentModel.DataAnnotations
@using Snackbox.Components.Services
@inject IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject HttpClient Http
@inject IStringLocalizer<SharedResources> L
@inject ILocalizationService Localization

<PageTitle>@L["Login.PageTitle"]</PageTitle>

<div class="login-container">
    <div class="login-card">
        <h2>@L["Login.Title"]</h2>

        @if (setupPasswordMode)
        {
            <p class="login-subtitle">@L["Login.SetupPassword"]</p>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success" role="alert">@successMessage</div>
            }

            <EditForm Model="@passwordSetupModel" OnValidSubmit="@HandlePasswordSetup">
                <DataAnnotationsValidator />

                <p class="text-muted mb-3">
                    @L["Login.WelcomeNoPassword", username]
                </p>

                <div class="form-group">
                    <label for="setupBarcode">@L["Login.Label.ScanYourBarcode"]</label>
                    <InputText
                        id="setupBarcode"
                        @bind-Value="passwordSetupModel.BarcodeValue"
                        class="form-control"
                        placeholder="@L["Login.Placeholder.ScanYourBarcode"]"
                        autofocus
                        disabled="@isLoading" />
                    <ValidationMessage For="@(() => passwordSetupModel.BarcodeValue)" />
                </div>

                <div class="form-group">
                    <label for="setupEmail">@L["Login.Label.Email"]</label>
                    <InputText
                        id="setupEmail"
                        type="email"
                        @bind-Value="passwordSetupModel.Email"
                        class="form-control"
                        placeholder="@L["Login.Placeholder.Email"]"
                        disabled="@isLoading" />
                    <ValidationMessage For="@(() => passwordSetupModel.Email)" />
                </div>

                <div class="form-group">
                    <label for="setupPassword">@L["Login.Label.NewPassword"]</label>
                    <InputText
                        id="setupPassword"
                        type="password"
                        @bind-Value="passwordSetupModel.NewPassword"
                        class="form-control"
                        placeholder="@L["Login.Placeholder.NewPassword"]"
                        disabled="@isLoading" />
                    <ValidationMessage For="@(() => passwordSetupModel.NewPassword)" />
                </div>

                <button type="submit" class="btn btn-primary btn-block" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                        <span> @L["Login.Loading.SettingPassword"]</span>
                    }
                    else
                    {
                        <span>@L["Login.Button.SetPassword"]</span>
                    }
                </button>

                <button type="button" class="btn btn-secondary btn-block mt-2" @onclick="CancelPasswordSetup" disabled="@isLoading">
                    @L["Login.Button.Skip"]
                </button>
            </EditForm>
        }
        else
        {
            <p class="login-subtitle">@L["Login.Subtitle"]</p>

            <p>@loginMode</p>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }

            <!-- Tab buttons -->
            <div class="login-tabs">
                <button type="button"
                        class="tab-button @(loginMode == "password" ? "active" : "")"
                        @onclick='() => SwitchLoginMode("password")'>
                    @L["Login.Tab.Password"]
                </button>
                <button type="button"
                        class="tab-button @(loginMode == "barcode" ? "active" : "")"
                        @onclick='() => SwitchLoginMode("barcode")'>
                    @L["Login.Tab.Barcode"]
                </button>
            </div>

            @if (loginMode == "password")
            {
                <EditForm Model="@passwordLoginModel" OnValidSubmit="@HandlePasswordLogin" FormName="passwordLogin">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label for="username">@L["Login.Label.Username"]</label>
                        <InputText
                            id="username"
                            @bind-Value="passwordLoginModel.Username"
                            class="form-control"
                            placeholder="@L["Login.Placeholder.Username"]"
                            autofocus
                            disabled="@isLoading" />
                        <ValidationMessage For="@(() => passwordLoginModel.Username)" />
                    </div>

                    <div class="form-group">
                        <label for="password">@L["Login.Label.Password"]</label>
                        <InputText
                            id="password"
                            type="password"
                            @bind-Value="passwordLoginModel.Password"
                            class="form-control"
                            placeholder="@L["Login.Placeholder.Password"]"
                            disabled="@isLoading" />
                        <ValidationMessage For="@(() => passwordLoginModel.Password)" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span> @L["Login.Loading.LoggingIn"]</span>
                        }
                        else
                        {
                            <span>@L["Login.Button.Login"]</span>
                        }
                    </button>
                </EditForm>
            }
            else
            {
                <EditForm Model="@barcodeLoginModel" OnValidSubmit="@HandleBarcodeLogin" FormName="barcodeLogin">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label for="barcodeInput">@L["Login.Label.Barcode"]</label>
                        <InputText
                            id="barcodeInput"
                            @bind-Value="barcodeLoginModel.BarcodeValue"
                            class="form-control form-control-lg"
                            placeholder="@L["Login.Placeholder.Barcode"]"
                            autofocus
                            disabled="@isLoading" />
                        <ValidationMessage For="@(() => barcodeLoginModel.BarcodeValue)" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span> @L["Login.Loading.LoggingIn"]</span>
                        }
                        else
                        {
                            <span>@L["Login.Button.Login"]</span>
                        }
                    </button>
                </EditForm>
            }

            <div class="login-info">
                <small class="text-muted">
                    @if (loginMode == "password")
                    {
                        <text>@L["Login.Info.NoPassword"]</text>
                    }
                    else
                    {
                        <text>@L["Login.Info.UseBarcode"]</text>
                }
                </small>
            </div>
        }
    </div>
</div>

@code {
