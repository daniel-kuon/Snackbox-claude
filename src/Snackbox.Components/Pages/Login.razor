@code {
    private string loginMode = "password";
    private bool setupPasswordMode = false;
    private string? username;
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    private PasswordLoginModel passwordLoginModel = new();
    private BarcodeLoginModel barcodeLoginModel = new();
    private PasswordSetupModel passwordSetupModel = new();

    private void SwitchLoginMode(string mode)
    {
        loginMode = mode;
        errorMessage = null;
    }

    private async Task HandlePasswordLogin()
    {
        errorMessage = null;
        isLoading = true;

        try
        {
            var result = await AuthService.LoginWithPasswordAsync(
                passwordLoginModel.Username,
                passwordLoginModel.Password);

            if (result.Success)
            {
                Navigation.NavigateTo("/admin/users", forceLoad: true);
            }
            else
            {
                // Check if user exists but has no password
                if (result.ErrorMessage?.Contains("no password") == true)
                {
                    username = passwordLoginModel.Username;
                    setupPasswordMode = true;
                    errorMessage = null;
                }
                else
                {
                    errorMessage = result.ErrorMessage ?? "Login failed. Please check your credentials.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleBarcodeLogin()
    {
        errorMessage = null;
        isLoading = true;

        try
        {
            var result = await AuthService.LoginAsync(barcodeLoginModel.BarcodeValue);

            if (result.Success)
            {
                // Check if user has a password
                var hasPassword = await CheckUserHasPassword(result.Username!);

                if (!hasPassword)
                {
                    username = result.Username;
                    setupPasswordMode = true;
                    errorMessage = null;
                }
                else
                {
                    Navigation.NavigateTo("/admin/users", forceLoad: true);
                }
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Login failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandlePasswordSetup()
    {
        errorMessage = null;
        successMessage = null;
        isLoading = true;

        try
        {
            var response = await Http.PostAsJsonAsync("/api/auth/set-password", new
            {
                BarcodeValue = passwordSetupModel.BarcodeValue,
                Email = passwordSetupModel.Email,
                NewPassword = passwordSetupModel.NewPassword
            });

            if (response.IsSuccessStatusCode)
            {
                successMessage = "Password set successfully! You can now login with your password.";
                await Task.Delay(2000);
                Navigation.NavigateTo("/admin/users", forceLoad: true);
            }
            else
            {
                errorMessage = "Failed to set password. Please make sure you scanned a valid barcode and entered the correct email address.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CancelPasswordSetup()
    {
        setupPasswordMode = false;
        username = null;
        errorMessage = null;
        successMessage = null;
        Navigation.NavigateTo("/admin/users", forceLoad: true);
    }

    private async Task<bool> CheckUserHasPassword(string username)
    {
        try
        {
            var response = await Http.GetFromJsonAsync<HasPasswordResponse>($"/api/auth/has-password/{username}");
            return response?.HasPassword ?? false;
        }
        catch
        {
            return false;
        }
    }

    private class PasswordLoginModel
    {
        [Required(ErrorMessage = "Username is required")]
        public string Username { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }

    private class BarcodeLoginModel
    {
        [Required(ErrorMessage = "Barcode is required")]
        public string BarcodeValue { get; set; } = string.Empty;
    }

    private class PasswordSetupModel
    {
        [Required(ErrorMessage = "Barcode is required")]
        public string BarcodeValue { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string NewPassword { get; set; } = string.Empty;
    }

    private class HasPasswordResponse
    {
        public bool HasPassword { get; set; }
    }
}
