@code {
    private bool _isProcessing = false;
    private string _processingMessage = "";
    private bool _showBackupList = false;
    private bool _hasExistingBackups = false;
    private List<BackupMetadataDto> _backups = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckExistingBackups();
    }

    private async Task CheckExistingBackups()
    {
        try
        {
            var backups = await BackupApi.ListBackupsAsync();
            _backups = backups.ToList();
            _hasExistingBackups = _backups.Any();
        }
        catch
        {
            _hasExistingBackups = false;
        }
    }

    private async Task ShowBackupList()
    {
        _showBackupList = true;
        await CheckExistingBackups();
    }

    private async Task RestoreFromExistingBackup(string backupId)
    {
        var backup = _backups.FirstOrDefault(b => b.Id == backupId);
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Restore database from backup '{backup?.FileName}'?");

        if (!confirmed) return;

        try
        {
            _isProcessing = true;
            _showBackupList = false;
            _processingMessage = "Restoring database from backup...";
            StateHasChanged();

            await BackupApi.RestoreBackupAsync(backupId, createBackupBeforeRestore: false);

            _processingMessage = "Database restored successfully! Redirecting...";
            StateHasChanged();
            Snackbar.Success("Database restored successfully! Redirecting to login...");

            await Task.Delay(2000);
            Navigation.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            Snackbar.Error($"Failed to restore backup: {ex.Message}");
            _showBackupList = true;
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task RestoreFromBackup(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        // Read the file content immediately to avoid WebView lifecycle issues
        MemoryStream memoryStream = null;
        try
        {
            // Open and read stream immediately before state changes
            using var stream = file.OpenReadStream(maxAllowedSize: 1_000_000_000); // 1GB
            memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            memoryStream.Position = 0;
        }
        catch (Exception ex)
        {
            Snackbar.Error($"Failed to read backup file: {ex.Message}");
            memoryStream?.Dispose();
            return;
        }

        try
        {
            _isProcessing = true;
            _processingMessage = "Restoring database from backup...";
            StateHasChanged();

            // Restore directly from upload
            var streamPart = new Refit.StreamPart(memoryStream, file.Name, "application/octet-stream");
            await BackupApi.RestoreFromUploadAsync(streamPart);

            _processingMessage = "Database restored successfully! Redirecting...";
            StateHasChanged();
            Snackbar.Success("Database restored successfully! Redirecting to login...");

            await Task.Delay(2000);
            Navigation.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            Snackbar.Error($"Failed to restore backup: {ex.Message}");
        }
        finally
        {
            memoryStream?.Dispose();
            _isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task CreateEmptyDatabase()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            "Are you sure you want to create an empty database? You'll need to set up users and products manually.");

        if (!confirmed) return;

        try
        {
            _isProcessing = true;
            _processingMessage = "Creating empty database...";
            StateHasChanged();

            await BackupApi.CreateEmptyDatabaseAsync();

            _processingMessage = "Database created successfully! Redirecting...";
            StateHasChanged();
            Snackbar.Success("Empty database created successfully! Redirecting to registration...");

            await Task.Delay(2000);
            Navigation.NavigateTo("/register", forceLoad: true);
        }
        catch (Exception ex)
        {
            Snackbar.Error($"Failed to create empty database: {ex.Message}");
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task CreateSeededDatabase()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            "Create a database with sample data? This is recommended for testing and initial setup.");

        if (!confirmed) return;

        try
        {
            _isProcessing = true;
            _processingMessage = "Creating database with sample data...";
            StateHasChanged();

            await BackupApi.CreateSeededDatabaseAsync();

            _processingMessage = "Database created successfully! Redirecting...";
            StateHasChanged();
            Snackbar.Success("Database created successfully! Redirecting to login...");

            await Task.Delay(2000);
            Navigation.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            Snackbar.Error($"Failed to create seeded database: {ex.Message}");
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }

    private string GetBackupTypeBadgeClass(string type)
    {
        return type switch
        {
            "Manual" => "primary",
            "Daily" => "info",
            "Weekly" => "warning",
            "Monthly" => "success",
            _ => "secondary"
        };
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string ParseBackupName(string fileName, string? customName)
    {
        // If there's a custom name, display it
        if (!string.IsNullOrWhiteSpace(customName))
        {
            return customName;
        }

        // Expected format: snackbox_backup_20260115_223652_Manual.sql
        // Parse: snackbox_backup_{date}_{time}_{type}[_{customName}].sql

        var pattern = @"snackbox_backup_(\d{8})_(\d{6})_(\w+)(?:_(.+))?\.sql";
        var match = System.Text.RegularExpressions.Regex.Match(fileName, pattern);

        if (match.Success)
        {
            // If there's a custom part after the type, return it
            if (match.Groups.Count > 4 && !string.IsNullOrWhiteSpace(match.Groups[4].Value))
            {
                return match.Groups[4].Value.Replace("_", " ");
            }

            // Otherwise return "Auto" for automatic backups
            return "Auto";
        }

        // If format doesn't match, return the full filename
        return fileName;
    }
}
