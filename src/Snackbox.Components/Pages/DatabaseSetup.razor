@page "/database-setup"
@using Snackbox.ApiClient
@using Microsoft.AspNetCore.Components.Forms
@using Snackbox.Components.Services
@using Snackbox.Api.Dtos
@layout EmptyLayout
@inject IBackupApi BackupApi
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject SnackbarService Snackbar

<PageTitle>Database Setup - Snackbox</PageTitle>

<div class="database-setup-container">
    <div class="setup-card">
        <div class="setup-header">
            <h2>‚ö†Ô∏è Database Setup Required</h2>
            <p>The Snackbox database is not available. Please choose one of the following options to set up the database.</p>
        </div>

        @if (_isProcessing)
        {
            <div class="loading-container">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Processing...</span>
                </div>
                <p>@_processingMessage</p>
            </div>
        }
        else if (_showBackupList)
        {
            <div class="backup-list-container">
                <h3>üì¶ Available Backups</h3>
                @if (_backups != null && _backups.Any())
                {
                    <p class="text-muted">Select a backup to restore:</p>
                    <div class="backup-list">
                        @foreach (var backup in _backups)
                        {
                            <div class="backup-item" @onclick="() => RestoreFromExistingBackup(backup.Id)">
                                <div class="backup-info">
                                    <strong>@ParseBackupName(backup.FileName, backup.CustomName)</strong>
                                    <small>@backup.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss") ‚Ä¢ @FormatFileSize(backup.FileSizeBytes)</small>
                                </div>
                                <div class="backup-type">
                                    <span class="badge bg-@GetBackupTypeBadgeClass(backup.Type)">@backup.Type</span>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="btn btn-secondary mt-3" @onclick="() => _showBackupList = false">
                        ‚Üê Back to Options
                    </button>
                }
                else
                {
                    <p class="alert alert-info">No existing backups found. You can upload a backup file from the main options.</p>
                    <button class="btn btn-secondary" @onclick="() => _showBackupList = false">
                        ‚Üê Back to Options
                    </button>
                }
            </div>
        }
        else
        {
            <div class="setup-options">
                <div class="option-card">
                    <div class="option-icon">üîÑ</div>
                    <h3>Restore from Backup</h3>
                    <p>Restore your database from a previously saved backup file.</p>
                    <label class="btn btn-primary w-100 mb-2" for="restoreBackupFile">
                        <span class="icon">üì•</span> Upload Backup File
                    </label>
                    <InputFile id="restoreBackupFile" OnChange="RestoreFromBackup" style="display: none;" accept=".sql" />
                    @if (_hasExistingBackups)
                    {
                        <button class="btn btn-outline-primary w-100" @onclick="ShowBackupList">
                            <span class="icon">üìã</span> Browse Existing Backups
                        </button>
                    }
                </div>

                <div class="option-card">
                    <div class="option-icon">üì¶</div>
                    <h3>Create Empty Database</h3>
                    <p>Create a fresh database with no data. You'll need to set up users and products manually.</p>
                    <button class="btn btn-secondary w-100" @onclick="CreateEmptyDatabase">
                        <span class="icon">‚ûï</span> Create Empty
                    </button>
                </div>

                <div class="option-card">
                    <div class="option-icon">üå±</div>
                    <h3>Create with Sample Data</h3>
                    <p>Create a database with sample users, products, and transactions for testing.</p>
                    <button class="btn btn-success w-100" @onclick="CreateSeededDatabase">
                        <span class="icon">üöÄ</span> Create with Data
                    </button>
                </div>
            </div>
        }
    </div>
</div>

