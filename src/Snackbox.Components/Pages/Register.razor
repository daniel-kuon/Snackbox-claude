@code {
    private string? _errorMessage;
    private string? _successMessage;
    private bool _isLoading;
    private Timer? _timeoutTimer;

    private RegisterModel _registerModel = new();

    [SupplyParameterFromQuery(Name = "barcode")]
    public string? BarcodeFromQuery { get; set; }

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(BarcodeFromQuery))
        {
            _registerModel.BarcodeValue = BarcodeFromQuery;
        }

        // Listen for barcode scans
        ScannerListener.CodeReceived += HandleBarcodeScanned;
        ScannerListener.Start();

        // Start 60 second timeout
        StartTimeout();
    }

    private async void HandleBarcodeScanned(string code)
    {
        await InvokeAsync(() =>
        {
            _registerModel.BarcodeValue = code;
            StateHasChanged();
            ResetTimeout();
        });
    }

    private async Task HandleRegister()
    {
        _errorMessage = null;
        _successMessage = null;
        _isLoading = true;

        try
        {
            var requestBody = new
            {
                _registerModel.BarcodeValue,
                _registerModel.Name,
                Email = string.IsNullOrWhiteSpace(_registerModel.Email) ? null : _registerModel.Email,
                Password = string.IsNullOrWhiteSpace(_registerModel.Password) ? null : _registerModel.Password
            };

            var response = await Http.PostAsJsonAsync("/api/users/register", requestBody);

            if (response.IsSuccessStatusCode)
            {
                _successMessage = "Account created successfully! Returning to scanner...";
                await Task.Delay(3000);
                Navigation.NavigateTo("/scan", forceLoad: true);
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                if (errorContent.Contains("already registered"))
                {
                    _errorMessage = "This barcode is already registered. Please use the login page.";
                }
                else if (errorContent.Contains("does not exist"))
                {
                    _errorMessage = "Invalid barcode. This barcode is not in the system. Please contact an administrator.";
                }
                else
                {
                    _errorMessage = "Registration failed. Please try again.";
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void StartTimeout()
    {
        _timeoutTimer = new Timer(60000); // 60 seconds
        _timeoutTimer.Elapsed += (_, _) =>
        {
            Navigation.NavigateTo("/scan", forceLoad: true);
        };
        _timeoutTimer.AutoReset = false;
        _timeoutTimer.Start();
    }

    private void ResetTimeout()
    {
        _timeoutTimer?.Stop();
        _timeoutTimer?.Dispose();
        StartTimeout();
    }

    public void Dispose()
    {
        ScannerListener.CodeReceived -= HandleBarcodeScanned;
        _timeoutTimer?.Dispose();
    }

    private class RegisterModel
    {
        [Required(ErrorMessage = "Barcode is required")]
        public string BarcodeValue { get; set; } = string.Empty;

        [Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string? Email { get; set; }

        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string? Password { get; set; }
    }
}
