@page "/register"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IScannerListener ScannerListener
@using System.ComponentModel.DataAnnotations
@using System.Timers
@implements IDisposable

<PageTitle>Register - Snackbox</PageTitle>

<div class="login-container">
    <div class="login-card">
        <h2>Create Account</h2>
        <p class="login-subtitle">Setup your Snackbox account</p>

        <div class="info-box">
            <p><strong>üëã Welcome!</strong></p>
            <p>Please scan <strong>any barcode that is assigned to you</strong> to create your account.</p>
            <p class="text-small">You can scan your personal barcode or enter it manually below.</p>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger" role="alert">@_errorMessage</div>
        }
        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="alert alert-success" role="alert">@_successMessage</div>
        }

        <EditForm Model="@_registerModel" OnValidSubmit="@HandleRegister" FormName="register">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="barcode">Your Barcode *</label>
                <InputText
                    id="barcode"
                    @bind-Value="_registerModel.BarcodeValue"
                    class="form-control"
                    placeholder="Scan or enter your barcode"
                    autofocus
                    disabled="@_isLoading" />
                <ValidationMessage For="@(() => _registerModel.BarcodeValue)" />
            </div>

            <div class="form-group">
                <label for="name">Your Name *</label>
                <InputText
                    id="name"
                    @bind-Value="_registerModel.Name"
                    class="form-control"
                    placeholder="Enter your full name"
                    disabled="@_isLoading" />
                <ValidationMessage For="@(() => _registerModel.Name)" />
            </div>

            <div class="form-group">
                <label for="email">Email Address (Optional)</label>
                <InputText
                    id="email"
                    type="email"
                    @bind-Value="_registerModel.Email"
                    class="form-control"
                    placeholder="Enter your email (optional)"
                    disabled="@_isLoading" />
                <ValidationMessage For="@(() => _registerModel.Email)" />
                <small class="form-text">Email is optional but recommended for password login.</small>
            </div>

            <div class="form-group">
                <label for="password">Password (Optional)</label>
                <InputText
                    id="password"
                    type="password"
                    @bind-Value="_registerModel.Password"
                    class="form-control"
                    placeholder="Create a password (optional)"
                    disabled="@_isLoading" />
                <ValidationMessage For="@(() => _registerModel.Password)" />
                <small class="form-text">Create a password if you want to log in without your barcode.</small>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <span class="spinner-border spinner-border-sm"></span>
                    <span> Creating account...</span>
                }
                else
                {
                    <span>Create Account</span>
                }
            </button>
        </EditForm>

        <div class="important-notice">
            <p><strong>‚ö†Ô∏è Important:</strong> After creating your account, please <strong>scan your barcode again</strong> to start using Snackbox. Nothing has been added to your account yet.</p>
        </div>

        <div class="login-info">
            <small class="text-muted">
                Already have an account? <a href="/login" class="register-link">Login here</a>
            </small>
        </div>
    </div>
</div>

