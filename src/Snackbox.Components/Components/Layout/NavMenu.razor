@inject NavigationManager Navigation
@inject IScannerService ScannerService
@inject IAuthenticationService AuthService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <span class="navbar-brand">Snackbox</span>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">

        @if (_showAdminSection)
        {
            <div class="nav-section">
                <div class="nav-section-title">Administration</div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/dashboard">
                        <span class="bi bi-speedometer2" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/users">
                        <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Users
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/products">
                        <span class="bi bi-box-seam-nav-menu" aria-hidden="true"></span> Products
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/discounts">
                        <span class="bi bi-tag-nav-menu" aria-hidden="true"></span> Discounts
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/invoices">
                        <span class="bi bi-receipt-nav-menu" aria-hidden="true"></span> Invoices
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/cash-register">
                        <span class="bi bi-cash-stack-nav-menu" aria-hidden="true"></span> Cash Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/backups">
                        <span class="bi bi-archive-nav-menu" aria-hidden="true"></span> Backups
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/settings">
                        <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Settings
                    </NavLink>
                </div>
            </div>
        }

        @if (_isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="change-password">
                    <span class="bi bi-key" aria-hidden="true"></span> Change Password
                </NavLink>
            </div>
        }

        @if (ShowExitButton)
        {
        <div class="nav-exit-section">
            <button class="nav-exit-button" @onclick="ExitToScanScreen">
                <span class="bi bi-box-arrow-left" aria-hidden="true"></span> Exit to Scan Screen
            </button>
        </div>
        }
    </nav>
</div>

@code {
    /// <summary>
    /// Whether to show the Exit button (typically for native/MAUI apps)
    /// </summary>
    [Parameter]
    public bool ShowExitButton { get; set; }

    /// <summary>
    /// The URL for the Home link
    /// </summary>
    [Parameter]
    public string HomeLink { get; set; } = "";

    /// <summary>
    /// The text for the Home link
    /// </summary>
    [Parameter]
    public string HomeLinkText { get; set; } = "Home";

    /// <summary>
    /// The URL to navigate to when Exit is clicked
    /// </summary>
    [Parameter]
    public string ExitUrl { get; set; } = "/scan";

    /// <summary>
    /// Whether to show the logout button (for web apps)
    /// </summary>
    [Parameter]
    public bool ShowLogoutButton { get; set; }

    private bool _showAdminSection;
    private bool _isAuthenticated;

    protected override async Task OnInitializedAsync()
    {
        await UpdateMenuVisibility();
    }

    protected override async Task OnParametersSetAsync()
    {
        await UpdateMenuVisibility();
    }

    private async Task UpdateMenuVisibility()
    {
        _isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (_isAuthenticated)
        {
            var userInfo = await AuthService.GetCurrentUserInfoAsync();
            _isAuthenticated = userInfo != null;
            _showAdminSection = userInfo?.IsAdmin ?? false;
        }
        else
        {
            _showAdminSection = false;
            _isAuthenticated = false;
        }
    }

    private async Task ExitToScanScreen()
    {
        await AuthService.LogoutAsync();

        // Reset scanner session before navigating
        ScannerService.ResetSession();

        Navigation.NavigateTo(ExitUrl, forceLoad: true);
    }
}
