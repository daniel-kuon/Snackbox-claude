@page "/Error"
@using System.Diagnostics
@inject IStringLocalizer<Snackbox.Components.Resources.SharedResources> L

<PageTitle>@L["Error.PageTitle"]</PageTitle>

<h1 class="text-danger">@L["Error.Title"]</h1>
<h2 class="text-danger">@L["Error.ProcessingRequest"]</h2>

@if (ShowRequestId)
{
    <p>
        <strong>@L["Error.RequestId"]</strong> <code>@RequestId</code>
    </p>
}

<h3>@L["Error.DevelopmentMode"]</h3>
<p>
    @((MarkupString)L["Error.DevelopmentInfo1"].Value)
</p>
<p>
    @((MarkupString)L["Error.DevelopmentInfo2"].Value)
</p>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}
