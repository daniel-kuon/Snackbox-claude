@inject IStringLocalizer<SharedResources> L
@inject Snackbox.Components.Services.ILocalizationService Localization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex align-items-center justify-content-between">
        <a class="navbar-brand" href="">@L["App.Name"]</a>

        <div class="d-flex align-items-center gap-2 text-light">
            <label class="me-1" for="langSelect" style="font-size: .9rem; opacity: .8;">Lang:</label>
            <select id="langSelect" class="form-select form-select-sm" style="width: auto;"
                    @onchange="OnLanguageChanged">
                @foreach (var c in Localization.SupportedCultures)
                {
                    <option value="@c.Name" selected="@(c.Name == Localization.CurrentCulture.Name)">@c.NativeName</option>
                }
            </select>
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @L["Nav.Login"]
            </NavLink>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">@L["Nav.Administration"]</div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/users">
                    <span class="bi bi-people-nav-menu" aria-hidden="true"></span> @L["Nav.Users"]
                </NavLink>
            </div>
        </div>
    </nav>
</div>

<style>
    .nav-section {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-section-title {
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.5);
        font-weight: 600;
        letter-spacing: 0.05em;
    }
</style>

@code {
    private async Task OnLanguageChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString() ?? "en";
        await Localization.SetCultureAsync(value);
        StateHasChanged();
    }
}
