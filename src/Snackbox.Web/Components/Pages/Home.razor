@page "/scan"
@layout Snackbox.Components.Components.Layout.EmptyLayout
@inject WindowsScannerListener ScannerListener
@inject IScannerService ScannerService
@inject NavigationManager Navigation
@using System.Timers
@using Snackbox.Components.Components
@using Snackbox.Components.Components.History
@using Snackbox.Api.Dtos
@using Snackbox.Components.Models
@using Snackbox.Web.Services
@implements IDisposable

<PageTitle>Snackbox Scanner</PageTitle>

<!-- Achievement Notification Overlay -->
@if (ScannerService.CurrentSession?.NewAchievements.Any() == true)
{
    <AchievementNotification
        Achievements="@ScannerService.CurrentSession.NewAchievements"
        CurrentScanInfo="@GetCurrentScanInfo()"
        OnAllAchievementsShown="@ClearAchievements"/>
}

<div class="scanner-container">
    @if (_errorMessage != null)
    {
        <div class="error-toast">@_errorMessage</div>
    }

    @if (!ScannerService.IsSessionActive)
    {
        <!-- Welcome Screen: Waiting for user to scan -->
        <div class="scan-prompt-container">
            <div class="scan-prompt-content">
                <div class="scan-icon">üì±</div>
                <h1 class="scan-title">Welcome to Snackbox</h1>
                <p class="scan-instruction">Please scan your card to continue</p>
            </div>
        </div>
    }
    else if (ScannerService.CurrentSession != null)
    {
        var session = ScannerService.CurrentSession;

        <!-- Active Purchase Session -->
        <div class="scanner-active" @key="session.UserId" @onmousemove="HandleUserMouse" @onmousedown="HandleUserMouse" @onwheel="HandleUserMouse">
            <!-- Main content area -->
            <div class="scanner-content">
                <!-- Left side: Purchase items and totals -->
                <div class="purchase-section">
                    <!-- Timer at top of purchase section -->
                    <div class="timer-container">
                        <div class="timer-circle">
                            <span class="timer-text">@_remainingSeconds</span>
                        </div>
                    </div>
                    <h3 class="section-title">Scanned Amounts</h3>

                    @if (session.ScannedBarcodes.Any())
                    {
                        <div class="items-list">
                            @foreach (var barcode in session.ScannedBarcodes.GroupBy(c => c.Amount))
                            {
                                <div class="purchase-item">
                                    <span class="item-price">@barcode.Count() x @barcode.Key.ToString("C")</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="no-items">
                            <p>Scan your personal barcodes to add amounts</p>
                        </div>
                    }

                    <div class="purchase-total">
                        <span class="total-label">Total:</span>
                        <span class="total-amount">@session.TotalAmount.ToString("C")</span>
                    </div>

                    <!-- Last payment info -->
                    @if (session.LastPaymentDate.HasValue)
                    {
                        <div class="last-payment" @onclick="OpenPaymentsModal" style="cursor: pointer;">
                            <div class="payment-label">Last Payment <small style="font-weight:normal;color:#ddd">(tap to view all)</small>:</div>
                            <div class="payment-details">
                                <span class="payment-amount">@session.LastPaymentAmount.ToString("C")</span>
                                <span class="payment-date">@session.LastPaymentDate.Value.ToString("dd MMM yyyy")</span>
                            </div>
                        </div>
                    }

                    <!-- Recent purchases -->
                    <div class="recent-purchases" @onclick="OpenPurchasesModal" style="cursor: pointer;">
                        <h4 class="recent-title">Recent Purchases (@session.RecentPurchases.Count) <small style="font-weight:normal;color:#666;">(click to view all)</small></h4>
                        @if (session.RecentPurchases.Any())
                        {
                            <div class="recent-list">
                                @foreach (var purchase in session.RecentPurchases)
                                {
                                    <div class="recent-item">
                                        <div class="recent-info">
                                            <span
                                                class="recent-date">@purchase.CompletedAt.ToString("dd MMM HH:mm")</span>
                                            <span
                                                class="recent-items">@purchase.ItemCount item@(purchase.ItemCount != 1 ? "s" : "")</span>
                                        </div>
                                        <span class="recent-amount">@purchase.TotalAmount.ToString("C")</span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p style="color: #666; font-size: 14px; margin-top: 10px;">No recent purchases</p>
                        }
                    </div>
                </div>

                <!-- Right side: User Info & QR Code -->
                <div class="qr-section">
                    <!-- User info at top -->
                    <div class="user-info-box">
                        <div class="user-info-left">
                            <h2 class="user-name">@session.UserName</h2>
                            <div class="user-balance">
                                <span
                                    class="balance-label">@(session.OpenAmount > 0 ? "Open Payment:" : "Deposit:")</span>
                                <span class="balance-amount @(session.OpenAmount > 0 ? "positive" : "negative")">
                                    @Math.Abs(session.OpenAmount).ToString("C")
                                </span>
                            </div>
                        </div>

                        @* Balance-based payment reminders *@
                        @if (session.OpenAmount >= 40)
                        {
                            var title = Pick([
                                                 "FINAL NOTICE (Things Have Escalated)",
                                                 "We‚Äôre Way Past Friendly Now",
                                                 "This Is Where the Serious Music Starts Playing"
                                             ]);

                            var message = Pick([
                                                   $"Your outstanding balance has reached {session.OpenAmount:C}. At this level, we‚Äôre no longer joking ‚Äî internal meetings are happening, emails are being CC‚Äôd, and someone has mentioned *external partners*. You really don‚Äôt want to meet our friends at MOSKVA IN–öŒõ–Ö–Ö√ò. Please pay immediately via PayPal.",

                                                   $"Balance due: {session.OpenAmount:C}. This is the point where spreadsheets turn red and MOSKVA  IN–öŒõ–Ö–Ö√ò‚Äôs contact card starts hovering over the keyboard. Let‚Äôs all agree to avoid that and settle this via PayPal right now.",

                                                   $"We regret to inform you that your balance of {session.OpenAmount:C} has entered the \"Find Out\" phase. Payment now avoids awkward conversations involving our 'payment enforcement specialists'. Act fast. Seriously."
                                               ]);

                            <div class="balance-notification danger">
                                <span class="notification-icon">‚ò†Ô∏èüìû</span>
                                <div class="notification-content">
                                    <strong>@title</strong>
                                    <p>@message</p>
                                </div>
                            </div>
                        }
                        else if (session.OpenAmount >= 30)
                        {
                            var title = Pick([
                                                 "PAYMENT APOCALYPSE IMMINENT",
                                                 "üö® Maximum Urgency Mode Activated",
                                                 "This Is Not a Drill"
                                             ]);

                            var message = Pick([
                                                   $"Your balance has reached {session.OpenAmount:C}. At this stage, this is no longer a reminder ‚Äî it‚Äôs a plea. Failure to pay may result in dramatic sighing, cancelled lunches, and existential despair. Please pay immediately via PayPal.",

                                                   $"Outstanding balance: {session.OpenAmount:C}. If this remains unpaid, this business may collapse, dreams will be crushed, and a very sad meal will go unfunded. Save us. Pay now.",

                                                   $"You currently owe {session.OpenAmount:C}. Time is an illusion, money is not. Please resolve this immediately before the situation becomes‚Ä¶ administrative."
                                               ]);

                            <div class="balance-notification danger">
                                <span class="notification-icon">üö®üî•</span>
                                <div class="notification-content">
                                    <strong>@title</strong>
                                    <p>@message</p>
                                </div>
                            </div>
                        }
                        else if (session.OpenAmount >= 20)
                        {
                            var title = Pick([
                                                 "Payment Requested (Before Things Get Weird)",
