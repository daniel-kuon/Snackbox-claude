@code {
    private int _remainingSeconds;
    private Timer? _countdownTimer;
    private string? _errorMessage;
    private Timer? _errorTimer;
    private bool _showPurchasesModal;
    private bool _showPaymentsModal;
    private List<PurchaseDto>? _allPurchases;
    private List<PaymentDto>? _allPayments;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to scanner events
        ScannerListener.CodeReceived += HandleCodeScanned;

        // Subscribe to service events
        ScannerService.OnPurchaseStarted += HandlePurchaseStarted;
        ScannerService.OnPurchaseUpdated += HandlePurchaseUpdated;
        ScannerService.OnPurchaseCompleted += HandlePurchaseCompleted;
        ScannerService.OnPurchaseTimeout += HandlePurchaseTimeout;

        // Start listening for scanner input
        ScannerListener.Start();
    }

    private async void HandleCodeScanned(string code)
    {
        try
        {
            // Process the barcode through the service - it handles everything
            var scanResult = await ScannerService.ProcessBarcodeAsync(code);

            if (!scanResult.IsSuccess)
            {
                ShowError(scanResult.ErrorMessage ?? "Barcode not recognized");
                return;
            }

            // Admin code detected - redirect to the barcode login page with barcode pre-filled
            if (scanResult.IsAdmin)
            {
                await InvokeAsync(() => { Navigation.NavigateTo($"/barcode-login?barcode={Uri.EscapeDataString(code)}"); });
                return;
            }

            // Login-only barcode - redirect to barcode login page
            if (scanResult.IsLoginOnly)
            {
                await InvokeAsync(() => { Navigation.NavigateTo($"/barcode-login?barcode={Uri.EscapeDataString(code)}"); });
            }
        }
        catch
        {
            ShowError("Barcode not recognized");
        }
    }

    private void HandlePurchaseStarted(PurchaseSession session)
    {
        _remainingSeconds = ScannerService.TimeoutSeconds;
        StartCountdownTimer();
        InvokeAsync(StateHasChanged);
    }

    private void HandlePurchaseUpdated(PurchaseSession session)
    {
        ResetCountdownTimer();
        InvokeAsync(StateHasChanged);
    }

    private void HandlePurchaseCompleted()
    {
        StopCountdownTimer();
        InvokeAsync(StateHasChanged);
    }

    private void HandlePurchaseTimeout()
    {
        StopCountdownTimer();
        InvokeAsync(StateHasChanged);
    }

    private void StartCountdownTimer()
    {
        _countdownTimer = new Timer(1000);
        _countdownTimer.Elapsed += (_, _) =>
                                   {
                                       _remainingSeconds--;
                                       InvokeAsync(StateHasChanged);

                                       if (_remainingSeconds <= 0)
                                       {
                                           StopCountdownTimer();
                                       }
                                   };
        _countdownTimer.Start();
    }

    private void ResetCountdownTimer()
    {
        StopCountdownTimer();
        _remainingSeconds = ScannerService.TimeoutSeconds;
        StartCountdownTimer();
    }

    private void StopCountdownTimer()
    {
        if (_countdownTimer != null)
        {
            _countdownTimer.Stop();
            _countdownTimer.Dispose();
            _countdownTimer = null;
        }
    }

    private void HandleUserMouse()
    {
        // Reset UI countdown and service timeout when mouse is used
        ResetCountdownTimer();
        ScannerService.SignalActivity();
    }

    private async Task EnsureAllPurchasesLoadedAsync()
    {
        if (_allPurchases == null)
        {
            var list = await ScannerService.GetMyPurchasesAsync();
            _allPurchases = list.OrderByDescending(p => (p.CompletedAt ?? p.CreatedAt)).ToList();
        }
    }

    private async Task EnsureAllPaymentsLoadedAsync()
    {
        if (_allPayments == null)
        {
            var list = await ScannerService.GetMyPaymentsAsync();
            _allPayments = list.OrderByDescending(p => p.PaidAt).ToList();
        }
    }

    private async Task OpenPurchasesModal()
    {
        await EnsureAllPurchasesLoadedAsync();
        _showPurchasesModal = true;
        StateHasChanged();
    }

    private async Task OpenPaymentsModal()
    {
        await EnsureAllPaymentsLoadedAsync();
        _showPaymentsModal = true;
        StateHasChanged();
    }

    private Task ClosePurchasesModal()
    {
        _showPurchasesModal = false;
        return Task.CompletedTask;
    }

    private Task ClosePaymentsModal()
    {
        _showPaymentsModal = false;
        return Task.CompletedTask;
    }

    private void ShowError(string message)
    {
        _errorMessage = message;
        InvokeAsync(StateHasChanged);

        // Auto-hide error after 5 seconds
        _errorTimer?.Dispose();
        _errorTimer = new Timer(5000);
        _errorTimer.Elapsed += (_, _) =>
                               {
                                   _errorMessage = null;
                                   InvokeAsync(StateHasChanged);
                                   _errorTimer?.Dispose();
                               };
        _errorTimer.AutoReset = false;
        _errorTimer.Start();
    }

    private string GetCurrentScanInfo()
    {
        if (ScannerService.CurrentSession == null)
            return string.Empty;

        var session = ScannerService.CurrentSession;
        if (session.ScannedBarcodes.Any())
        {
            var lastScan = session.ScannedBarcodes.Last();
            return $"{lastScan.Amount:C}";
        }

        return $"Total: {session.TotalAmount:C}";
    }

    private void ClearAchievements()
    {
        if (ScannerService.CurrentSession != null)
        {
            ScannerService.CurrentSession.NewAchievements.Clear();
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        ScannerListener.CodeReceived -= HandleCodeScanned;
        ScannerService.OnPurchaseStarted -= HandlePurchaseStarted;
        ScannerService.OnPurchaseUpdated -= HandlePurchaseUpdated;
        ScannerService.OnPurchaseCompleted -= HandlePurchaseCompleted;
        ScannerService.OnPurchaseTimeout -= HandlePurchaseTimeout;

        StopCountdownTimer();
        _errorTimer?.Dispose();
    }

    private T Pick<T>(IList<T> items)
    {
        long startTimeTicks = ScannerService.CurrentSession?.StartTime.Ticks ?? 0;
        var rand = new Random((int)startTimeTicks);
        int index = rand.Next(items.Count);
        return items[index];
    }

