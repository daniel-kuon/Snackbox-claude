@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Snackbox</a>
        <button class="btn btn-sm btn-outline-light" @onclick="ExitToScanScreen">
            <span class="bi bi-box-arrow-left" aria-hidden="true"></span> Exit
        </button>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Administration</div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/users">
                    <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Users
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/products">
                    <span class="bi bi-box-seam-nav-menu" aria-hidden="true"></span> Products
                </NavLink>
            </div>
        </div>
    </nav>
</div>

<style>
    .nav-section {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-section-title {
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.5);
        font-weight: 600;
        letter-spacing: 0.05em;
    }

    .top-row .container-fluid {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

@code {
    private void ExitToScanScreen()
    {
        Navigation.NavigateTo("/scan", forceLoad: true);
    }
}
